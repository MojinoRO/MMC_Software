<Window x:Class="MMC_Software.VentanaBuscadorDocumentos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MMC_Software"
        mc:Ignorable="d"
        Height="300" Width="500"
        Background="#2C3E50"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Loaded="Window_Loaded">
    <Grid >
        <GroupBox Header="Listado Documentos" Foreground="White">
            <ListBox x:Name="LstDocumentos" FontSize="16"
                     Foreground="Black" PreviewKeyDown="LstDocumentos_PreviewKeyDown"
                     MouseDoubleClick="LstDocumentos_MouseDoubleClick"/>
        </GroupBox>
    </Grid>
</Window>
