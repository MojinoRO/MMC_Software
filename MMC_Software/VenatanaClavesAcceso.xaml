<UserControl x:Class="MMC_Software.VentanaClavesAcceso"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Background="#2C3E50">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Encabezado -->
            <RowDefinition Height="*"/>
            <!-- Contenido -->
            <RowDefinition Height="Auto"/>
            <!-- Botones -->
        </Grid.RowDefinitions>

        <!-- ENCABEZADO -->
        <TextBlock Text="🔐 Configuración de Claves del Sistema"
             FontSize="22"
             FontWeight="Bold"
             Foreground="White"
             HorizontalAlignment="Center"
             Margin="0 10 0 20"/>

        <!-- CONTENIDO EN DOS COLUMNAS -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Columna Izquierda -->
            <!-- Clave Caja -->
            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0 0 20 20">
                <TextBlock Text="Clave de Caja" Foreground="White" FontSize="16" Margin="0 0 0 5"/>
                <PasswordBox x:Name="pwdClaveCaja"
                       FontSize="14"
                       Padding="8"
                       Background="#34495E"
                       Foreground="White"
                       BorderBrush="#1ABC9C"
                       BorderThickness="1"
                       CaretBrush="White"/>
            </StackPanel>

            <!-- Clave Sistema -->
            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0 0 20 20">
                <TextBlock Text="Clave de Sistema" Foreground="White" FontSize="16" Margin="0 0 0 5"/>
                <PasswordBox x:Name="pwdClaveSistema"
                       FontSize="14"
                       Padding="8"
                       Background="#34495E"
                       Foreground="White"
                       BorderBrush="#1ABC9C"
                       BorderThickness="1"
                       CaretBrush="White"/>
            </StackPanel>

            <!-- Clave Ventas -->
            <StackPanel Grid.Row="2" Grid.Column="0" Margin="0 0 20 20">
                <TextBlock Text="Clave de Ventas" Foreground="White" FontSize="16" Margin="0 0 0 5"/>
                <PasswordBox x:Name="pwdClaveVentas"
                       FontSize="14"
                       Padding="8"
                       Background="#34495E"
                       Foreground="White"
                       BorderBrush="#1ABC9C"
                       BorderThickness="1"
                       CaretBrush="White"/>
            </StackPanel>

            <!-- Columna Derecha -->
            <!-- Clave Usuarios -->
            <StackPanel Grid.Row="0" Grid.Column="1" Margin="20 0 0 20">
                <TextBlock Text="Clave de Usuarios" Foreground="White" FontSize="16" Margin="0 0 0 5"/>
                <PasswordBox x:Name="pwdClaveUsuarios"
                       FontSize="14"
                       Padding="8"
                       Background="#34495E"
                       Foreground="White"
                       BorderBrush="#1ABC9C"
                       BorderThickness="1"
                       CaretBrush="White"/>
            </StackPanel>

            <!-- Clave Inventario -->
            <StackPanel Grid.Row="1" Grid.Column="1" Margin="20 0 0 20">
                <TextBlock Text="Clave de Inventario" Foreground="White" FontSize="16" Margin="0 0 0 5"/>
                <PasswordBox x:Name="pwdClaveInventario"
                       FontSize="14"
                       Padding="8"
                       Background="#34495E"
                       Foreground="White"
                       BorderBrush="#1ABC9C"
                       BorderThickness="1"
                       CaretBrush="White"/>
            </StackPanel>

            <!-- Clave Compras -->
            <StackPanel Grid.Row="2" Grid.Column="1" Margin="20 0 0 20">
                <TextBlock Text="Clave de Compras" Foreground="White" FontSize="16" Margin="0 0 0 5"/>
                <PasswordBox x:Name="pwdClaveCompras"
                       FontSize="14"
                       Padding="8"
                       Background="#34495E"
                       Foreground="White"
                       BorderBrush="#1ABC9C"
                       BorderThickness="1"
                       CaretBrush="White"/>
            </StackPanel>
        </Grid>

        <!-- BOTONES -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 20 0 0">
            <Button Content="Guardar"
              Width="120"
              Height="40"
              Background="#1ABC9C"
              Foreground="White"
              FontWeight="Bold"
              BorderThickness="0"
              Cursor="Hand"
              Margin="0 0 10 0"
              x:Name="BtnGuardar"
              Click="BtnGuardar_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="10 5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button Content="Cancelar"
              Width="120"
              Height="40"
              Background="Transparent"
              Foreground="White"
              BorderBrush="White"
              BorderThickness="1"
              Cursor="Hand"
              Click="BtnCancelar_Click"
              x:Name="BtnCancelar">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                          CornerRadius="5"
                          Padding="10 5"
                          BorderBrush="{TemplateBinding BorderBrush}"
                          BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>

