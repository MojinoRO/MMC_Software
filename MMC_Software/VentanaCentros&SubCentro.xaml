<UserControl x:Class="MMC_Software.VentanaCentros_SubCentro"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MMC_Software"
             mc:Ignorable="d"
             Background="#f3f6fa">
    <UserControl.Resources>
        <Style x:Key="BotonBase" TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="32"/>
        </Style>

        <Style x:Key="BotonPrincipal" BasedOn="{StaticResource BotonBase}" TargetType="Button">
            <Setter Property="Background" Value="#2b3e5c"/>
            <Setter Property="Width" Value="110"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                            CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3c517a"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BotonSecundario" BasedOn="{StaticResource BotonBase}" TargetType="Button">
            <Setter Property="Background" Value="#607d8b"/>
            <Setter Property="Width" Value="110"/>
        </Style>

        <Style x:Key="BotonPeligro" BasedOn="{StaticResource BotonBase}" TargetType="Button">
            <Setter Property="Background" Value="#c62828"/>
            <Setter Property="Width" Value="110"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#e53935"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>


    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Border Margin="20" CornerRadius="12" Background="White" Padding="20" BorderBrush="#d0d6e0" BorderThickness="1" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>

                <!-- ENCABEZADO -->
                <DockPanel Grid.Row="0" Margin="0,0,0,15">
                    <TextBlock Text="🏢 Centros de Costo" 
                               FontSize="22" 
                               FontWeight="Bold" 
                               Foreground="#2b3e5c"
                               VerticalAlignment="Center" />
                    <Button Content="🚪 Salir" HorizontalAlignment="Right"
                            Width="110" Height="35" Margin="5"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Background="#C53030"
                            BorderBrush="#C53030"
                            Cursor="Hand"
                            Click="ButtonSalir_Click"/> 
                </DockPanel>

                <!-- FORMULARIO CENTROS -->
                <Border Grid.Row="1" CornerRadius="8" Padding="15" Background="#f9fbfd" BorderBrush="#d0d6e0" BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="5">
                            <TextBlock Text="NIT Centro Costo" FontWeight="Bold" Foreground="#2b3e5c"/>
                            <TextBox x:Name="txtNitCentroCosto" IsEnabled="False" Margin="0,4,0,10" />
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="5">
                            <TextBlock Text="Código Centro Costo" FontWeight="Bold" Foreground="#2b3e5c"/>
                            <TextBox x:Name="txtCodigoCentroCosto" IsEnabled="False" Margin="0,4,0,10"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Grid.Column="0" Margin="5">
                            <TextBlock Text="Nombre Centro Costo" FontWeight="Bold" Foreground="#2b3e5c"/>
                            <TextBox x:Name="txtNombreCentroCosto" IsEnabled="False" Margin="0,4,0,10"/>
                        </StackPanel>

                        <!-- LISTA CENTROS -->
                        <ListBox x:Name="listboxCentrosCosto" Grid.Row="0" Grid.Column="2" Grid.RowSpan="3"
                                 Margin="15,0,0,0"
                                 BorderBrush="#d0d6e0" BorderThickness="1"
                                 MouseDoubleClick="txtCentrosCosto_MouseDoubleClick"/>
                    </Grid>
                </Border>

                <!-- BOTONES CENTROS -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,20">
                    <Button Content="🆕 Crear" Style="{StaticResource BotonPrincipal}" Click="ButtonCrear_Click"/>
                    <Button Content="✏️ Modificar" Style="{StaticResource BotonSecundario}" Click="ButtonModifica_Click"/>
                    <Button Content="💾 Guardar" Style="{StaticResource BotonPrincipal}" Click="ButtonGuardar_Click"/>
                    <Button Content="🗑️ Eliminar" Style="{StaticResource BotonPeligro}" Click="ButtonEliminar_Click"/>
                </StackPanel>

                <!-- SUBCENTROS -->
                <TextBlock Grid.Row="4" Text="📂 Subcentros de Costo"
                           FontSize="22" FontWeight="Bold"
                           Foreground="#2b3e5c" Margin="5"/>

                <Border Grid.Row="5" CornerRadius="8" Padding="10" Background="#f9fbfd" BorderBrush="#d0d6e0" BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="5">
                            <TextBlock Text="Código Subcentro" FontWeight="Bold" Foreground="#2b3e5c"/>
                            <TextBox x:Name="txtCodigoSubCentroCosto" IsEnabled="False" Margin="0,4,0,10"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="5">
                            <TextBlock Text="Nombre Subcentro" FontWeight="Bold" Foreground="#2b3e5c"/>
                            <TextBox x:Name="txtNombreSubCentroCosto" IsEnabled="False" Margin="0,4,0,10"/>
                        </StackPanel>

                        <!-- LISTA SUBCENTROS -->
                        <ListBox x:Name="ListBoxSCC" Grid.Row="0" Grid.Column="2" Grid.RowSpan="3"
                                 Margin="15,0,0,0"
                                 BorderBrush="#d0d6e0" BorderThickness="1"
                                 MouseDoubleClick="ListBoxSCC_MouseDoubleClick"/>
                    </Grid>
                </Border>

                <!-- BOTONES SUBCENTROS -->
                <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,0">
                    <Button Content="🆕 Crear" Style="{StaticResource BotonPrincipal}" Click="ButtonSubCrear_Click"/>
                    <Button Content="✏️ Modificar" Style="{StaticResource BotonSecundario}" Click="Button_Click"/>
                    <Button Content="💾 Guardar" Style="{StaticResource BotonPrincipal}" Click="ButtonSubGuardar_Click_1"/>
                    <Button Content="🗑️ Eliminar" Style="{StaticResource BotonPeligro}" Click="Button_Click_1"/>
                </StackPanel>
            </Grid>
        </Border>
    </ScrollViewer>
</UserControl>
