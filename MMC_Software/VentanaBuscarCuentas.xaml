<Window x:Class="MMC_Software.VentanaBuscarCuentas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Buscar Cuenta PUC" Height="400" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FFF4F4F4">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Campo de búsqueda -->
        <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
            <TextBlock Text="Buscar:" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,5,0"/>
            <TextBox x:Name="txtBuscar" Width="300" Height="25" TextChanged="txtBuscar_TextChanged"/>
        </StackPanel>

        <!-- Tabla de resultados -->
        <DataGrid x:Name="dgCuentas" Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False"
                  IsReadOnly="True" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Código" Binding="{Binding Codigo}" Width="*" />
                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="2*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Botones -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="2" Margin="0,10,0,0">
            <Button x:Name="btnSeleccionar" Content="Seleccionar" Width="100" Margin="0,0,10,0" Click="btnSeleccionar_Click"/>
            <Button x:Name="btnCancelar" Content="Cancelar" Width="100" Click="btnCancelar_Click"/>
        </StackPanel>
    </Grid>
</Window>
