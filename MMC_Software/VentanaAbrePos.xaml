<Window x:Class="MMC_Software.VentanaAbrePos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MMC_Software"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Height="400" Width="340"
        WindowStartupLocation="CenterScreen"
        Title="Abrir Punto de Venta"
        Background="#f4f6f9">

    <Border Margin="5" CornerRadius="12" Background="White" Padding="10" 
            BorderBrush="#d0d6e0" BorderThickness="1" SnapsToDevicePixels="True">
        <Grid>
            <GroupBox Header="📌 Selección de Turno" 
                      VerticalAlignment="Top" 
                      HorizontalAlignment="Stretch"
                      FontWeight="Bold"
                      FontSize="14"
                      BorderBrush="#4a90e2"
                      Foreground="#333">

                <Grid Margin="10" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Cajero -->
                    <StackPanel Grid.Row="0" Margin="0,5">
                        <TextBlock Text="Seleccione Cajero" 
                                   FontSize="13"
                                   Foreground="#444"
                                   Margin="0,0,0,3"/>
                        <ComboBox x:Name="cmbVendedor"  
                                  Height="28"
                                  Padding="4"
                                  HorizontalAlignment="Stretch"/>
                    </StackPanel>

                    <!-- Almacén -->
                    <StackPanel Grid.Row="1" Margin="0,5">
                        <TextBlock Text="Almacén Venta" 
                                   FontSize="13"
                                   Foreground="#444"
                                   Margin="0,0,0,3"/>
                        <ComboBox x:Name="cmbAlmacen" 
                                  Height="28"
                                  Padding="4"
                                  HorizontalAlignment="Stretch"/>
                    </StackPanel>

                    <!-- Fecha -->
                    <StackPanel Grid.Row="2" Margin="0,5">
                        <TextBlock Text="Fecha" 
                                   FontSize="13"
                                   Foreground="#444"
                                   Margin="0,0,0,3"/>
                        <DatePicker x:Name="dtFecha"
                                    Height="28"
                                    Padding="4"
                                    HorizontalAlignment="Stretch"
                                    SelectedDate="{x:Static sys:DateTime.Now}"/>
                    </StackPanel>

                    <!-- Documento -->
                    <StackPanel Grid.Row="3" Margin="0,5">
                        <TextBlock Text="Documento Ventas" 
                                   FontSize="13"
                                   Foreground="#444"
                                   Margin="0,0,0,3"/>
                        <ComboBox x:Name="cmbDocumento" 
                                  Height="28"
                                  Padding="4"
                                  HorizontalAlignment="Stretch"/>
                    </StackPanel>

                    <!-- Botón Entrar -->
                    <StackPanel Grid.Row="4" Margin="10" HorizontalAlignment="Center">
                        <Button x:Name="btnEntrar" 
                                Content="🚀 Entrar" 
                                Width="130" 
                                Height="38"
                                FontWeight="Bold"
                                Foreground="White"
                                Background="#4a90e2" 
                                BorderBrush="#4a90e2"
                                BorderThickness="0"
                                Click="btnEntrar_Click"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                    <Setter Property="Background" Value="#4a90e2"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="8"
                                                        Padding="6"
                                                        SnapsToDevicePixels="True">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#357ABD"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#2a5d91"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </GroupBox>
        </Grid>
    </Border>
</Window>
