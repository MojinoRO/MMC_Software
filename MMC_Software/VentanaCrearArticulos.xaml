<Window x:Class="MMC_Software.VentanaCrearArticulos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Creación de Artículos"
        Height="550"
        Width="850"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="#F4F6F8"
        xmlns:vm="clr-namespace:MMC_Software">

    <Grid Margin="15">
        <Border Background="White"
                CornerRadius="8"
                BorderBrush="#E0E0E0"
                BorderThickness="1">

            <Grid>
                <!-- FILAS PRINCIPALES -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- TÍTULO -->
                    <RowDefinition Height="*"/>
                    <!-- CONTENIDO -->
                    <RowDefinition Height="Auto"/>
                    <!-- BOTONES -->
                </Grid.RowDefinitions>

                <!-- =======================
                     TÍTULO
                     ======================= -->
                <TextBlock Grid.Row="0"
                           Text="📦 Creación de Artículos"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="#2C3E50"
                           Margin="20,15,20,10"/>

                <!-- =======================
                     CONTENIDO CON SCROLL
                     ======================= -->
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">

                    <StackPanel Margin="20,10,20,10">

                        <!-- =======================
                             IDENTIDAD DEL ARTÍCULO
                             ======================= -->
                        <GroupBox Header="Datos del Artículo" Margin="0,0,0,10">
                            <Grid Margin="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="3*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Código Artículo"/>
                                    <TextBox x:Name="txtCodigo" IsEnabled="{Binding CodigoArticulo}"/>

                                    <TextBlock Text="Categoría"/>
                                    <ComboBox x:Name="cbCategoria" ItemsSource="{Binding Categories}"
                                              DisplayMemberPath="InfoCategoria"
                                              SelectedValuePath="CategoriasID"
                                              SelectedValue="CategoriaSeleccionadaID"/>

                                    <TextBlock Text="Subcategoría"/>
                                    <ComboBox x:Name="cbSubCategoria"/>

                                    <TextBlock Text="Marca"/>
                                    <ComboBox x:Name="cbMarca"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                    <TextBlock Text="Nombre Artículo"/>
                                    <TextBox x:Name="txtNombre"
                                             CharacterCasing="Upper"/>

                                    <TextBlock Text="Referencia Artículo"/>
                                    <TextBox x:Name="txtReferencia"/>

                                    <TextBlock Text="Código de Barras"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBox x:Name="TxtBarras"
                                                 Width="220"
                                                 Margin="0,0,5,0"/>
                                        <Button x:Name="BtnBarras"
                                                Style="{StaticResource BtnBuscar}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </GroupBox>

                        <!-- =======================
                             COSTOS E IMPUESTOS
                             ======================= -->
                        <GroupBox Header="Costos e Impuestos" Margin="0,0,0,10">
                            <Grid Margin="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Costo sin IVA"/>
                                    <TextBox x:Name="txtCostoSinIva"/>

                                    <TextBlock Text="Costo con IVA"/>
                                    <TextBox x:Name="txtCostoConIva"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                    <TextBlock Text="Tarifa IVA"/>
                                    <TextBox x:Name="txtTarifaIva"
                                             IsReadOnly="True"
                                             Background="#F0F0F0"/>

                                    <TextBlock Text="Incremento"/>
                                    <TextBox x:Name="txtIncremento"/>
                                    
                                </StackPanel>

                                <StackPanel Grid.Column="2" Margin="10,0,0,0">
                                    <TextBlock Text="Margen"/>
                                    <TextBox x:Name="txtMargen"/>

                                    <TextBlock Text="Utilidad"/>
                                    <TextBox x:Name="txtUtilidad"
                                             IsReadOnly="True"
                                             Background="#F0F0F0"/>
                                </StackPanel>
                            </Grid>
                        </GroupBox>

                        <!-- =======================
                             PRECIOS
                             ======================= -->
                        <GroupBox Header="Precios de Venta">
                            <Grid Margin="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Precio Venta"/>
                                    <TextBox x:Name="txtPrecioVenta"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                    <TextBlock Text="Precio Mínimo"/>
                                    <TextBox x:Name="txtPrecioMinimo"
                                             IsReadOnly="True"
                                             Background="#F0F0F0"/>
                                </StackPanel>
                            </Grid>
                        </GroupBox>

                    </StackPanel>
                </ScrollViewer>

                <!-- =======================
                     BOTONERA ERP
                     ======================= -->
                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="15">

                    <Button x:Name="btnCrear"
                            Style="{StaticResource BtnCrear}"/>

                    <Button x:Name="btnEditar"
                            Style="{StaticResource BtnModificar}"/>

                    <Button x:Name="btnEliminar"
                            Style="{StaticResource BtnEliminar}"/>

                    <Button x:Name="btnGuardar"
                            Style="{StaticResource BtnGuardar}"/>

                    <Button x:Name="btnSalir"
                            Style="{StaticResource BtnCerrar}"/>
                </StackPanel>

            </Grid>
        </Border>
    </Grid>
</Window>