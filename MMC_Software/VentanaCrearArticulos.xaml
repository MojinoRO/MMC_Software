<Window x:Class="MMC_Software.VentanaCrearArticulos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MMC_Software"
        mc:Ignorable="d"
        Title="VentanaCrearArticulos" Height="550" Width="850"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="#F4F6F8">

    <Window.Resources>
        <!-- Estilo alternativo para botones -->
        <Style x:Key="AltButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="#2D89EF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="ToolTipService.ShowOnDisabled" Value="True"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1E5EA8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#16497F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para TextBox y ComboBox -->
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="28"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Padding" Value="5,0"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="28"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,2"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Border Background="White" CornerRadius="8" Padding="20" BorderBrush="#E0E0E0" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Título -->
                <TextBlock Text="Registro de Artículos"
                           FontSize="22" FontWeight="Bold"
                           Foreground="#333"
                           Margin="0 0 0 15"/>

                <!-- Formulario dentro de ScrollViewer -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <Grid Margin="0,10,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="1.5*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Columna Izquierda -->
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Código Artículo"/>
                            <TextBox x:Name="txtCodigo"/>

                            <TextBlock Text="Nombre Artículo"/>
                            <TextBox x:Name="txtNombre" CharacterCasing="Upper"/>

                            <!-- Categoría + Tarifa IVA en la misma fila -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="Categoría"/>
                                    <ComboBox x:Name="cbCategoria" SelectionChanged="cbCategoria_SelectionChanged"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Tarifa IVA"/>
                                    <TextBox x:Name="txtTarifaIva" IsReadOnly="True" Background="#F0F0F0" Width="35"/>
                                </StackPanel>
                            </Grid>

                            <TextBlock Text="Subcategoría"/>
                            <ComboBox x:Name="cbSubCategoria"/>

                            <!-- Costos sin IVA + Incremento -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Costo sin IVA"/>
                                    <TextBox x:Name="txtCostoSinIva"
                                             KeyDown="txtCostoSinIva_KeyDown"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2" Margin="10,0,0,0">
                                    <TextBlock Text="Incremento"/>
                                    <TextBox x:Name="txtIncremento" PreviewTextInput="txtMargen_PreviewTextInput" 
                                             KeyDown="txtIncremento_KeyDown"/>
                                </StackPanel>
                            </Grid>

                            <!-- Costos + Margen -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Costo con IVA"/>
                                    <TextBox x:Name="txtCostoConIva" />
                                </StackPanel>
                                <StackPanel Grid.Column="2" Margin="10,0,0,0">
                                    <TextBlock Text="Margen"/>
                                    <TextBox x:Name="txtMargen" KeyDown="txtMargen_KeyDown"/>
                                </StackPanel>
                            </Grid>

                        </StackPanel>

                        <!-- Columna Derecha -->
                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <TextBlock Text="Precio Venta"/>
                            <TextBox x:Name="txtPrecioVenta" PreviewTextInput="txtMargen_PreviewTextInput" />

                            <!-- Campo Precio Mínimo -->
                            <TextBlock Text="Precio Mínimo"/>
                            <TextBox x:Name="txtPrecioMinimo" IsReadOnly="True" PreviewTextInput="txtMargen_PreviewTextInput"/>

                            <!-- Campo Utilidad -->
                            <TextBlock Text="Utilidad"/>
                            <TextBox x:Name="txtUtilidad" IsReadOnly="True" Background="#F0F0F0"/>

                            <TextBlock Text="Código de Barras"/>

                            <StackPanel Orientation="Horizontal">
                                <TextBox x:Name="TxtBarras" Width="200" Margin="3"/>
                                <Button x:Name="BtnBarras" Content="..."
                                        Width="30" FontSize="16" Height="26"
                                        Margin="5" Click="BtnBarras_Click"></Button>
                            </StackPanel>
                            
                            <TextBlock Text="Referencia Artículo"/>
                            <TextBox x:Name="txtReferencia"/>

                            <TextBlock Text="Marca"/>
                            <ComboBox x:Name="cbMarca"/>

                        </StackPanel>
                    </Grid>
                </ScrollViewer>

                <!-- Botones -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button x:Name="btnCrear" Content="➕" Style="{StaticResource AltButtonStyle}" ToolTip="Nuevo" Click="btnCrear_Click"/>
                    <Button x:Name="btnEditar" Content="✏️" Style="{StaticResource AltButtonStyle}" ToolTip="Editar" Click="btnEditar_Click"/>
                    <Button x:Name="btnEliminar" Content="❌" Style="{StaticResource AltButtonStyle}" ToolTip="Eliminar" Click="btnEliminar_Click"/>
                    <Button x:Name="btnGuardar" Content="💾" Style="{StaticResource AltButtonStyle}" ToolTip="Guardar" Click="btnGuardar_Click"/>
                    <Button x:Name="btnSalir" Content="❎" Style="{StaticResource AltButtonStyle}" ToolTip="Salir" Click="btnSalir_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
