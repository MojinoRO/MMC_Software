<UserControl x:Class="MMC_Software.VentanaCrearUsuarios"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MMC_Software"
        mc:Ignorable="d"
        Height="550" Width="850"
        Background="#2C3E50">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="520"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <!-- Panel Datos Usuario -->
        <Border Grid.Column="0" CornerRadius="10" Background="#34495E" Padding="15" Margin="5">
            <GroupBox Header="Datos Usuario" Foreground="White"
                   FontFamily="Tahoma" FontSize="13" Padding="10">

                <!-- GRID PRINCIPAL PARA ALINEACIÓN -->
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Tipo Usuario -->
                    <TextBlock Text="Tipo Usuario:" Grid.Row="0" Grid.Column="0" 
                            Margin="5" Foreground="White" VerticalAlignment="Center"/>
                    <ComboBox x:Name="cmbTipoUsuario" Grid.Row="0" Grid.Column="1"
                           Width="150" Margin="5" IsEnabled="False" HorizontalContentAlignment="Center" FontSize="14"/>

                    <!-- Nombre Usuario -->
                    <TextBlock Text="Nombre Usuario:" Grid.Row="1" Grid.Column="0" 
                            Margin="5" Foreground="White" VerticalAlignment="Center"/>
                    <TextBox  IsEnabled="False" x:Name="TxtNombreUsuario" Grid.Row="1" Grid.Column="1"
                          Width="250" Margin="5" HorizontalAlignment="Center" Height="25"
                         FontSize="16" CharacterCasing="Upper" HorizontalContentAlignment="Center"
                         LostKeyboardFocus="TxtNombreUsuario_LostKeyboardFocus"/>

                    <!-- Almacén -->
                    <TextBlock  IsEnabled="False" Text="Almacén Predeterminado:" Grid.Row="2" Grid.Column="0" 
                            Margin="5" Foreground="White" VerticalAlignment="Center"/>
                    <ComboBox  IsEnabled="False" x:Name="cmbAlmacen" Grid.Row="2" Grid.Column="1"
                           Width="200" Margin="5"/>

                    <!-- Vendedor -->
                    <TextBlock Text="Digitador / Vendedor:" Grid.Row="3" Grid.Column="0" 
                            Margin="5" Foreground="White" VerticalAlignment="Center"/>
                    <ComboBox  IsEnabled="False" x:Name="cmbVendedores" Grid.Row="3" Grid.Column="1"
                           Width="200" Margin="5"/>

                    <!-- Documento -->
                    <TextBlock Text="Documento Venta:" Grid.Row="4" Grid.Column="0" 
                            Margin="5" Foreground="White" VerticalAlignment="Center"/>
                    <ComboBox  IsEnabled="False" x:Name="cmbDocumentos" Grid.Row="4" Grid.Column="1"
                           Width="200" Margin="5"/>

                    <!-- Acceso Módulos -->
                    <GroupBox Header="Acceso A Módulos" Foreground="White" FontSize="12" 
                           Grid.Row="5" Grid.ColumnSpan="2" Margin="5" Padding="8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="40"/>
                            </Grid.ColumnDefinitions>

                            <!-- Modulo POS -->
                            <CheckBox   IsEnabled="False" Content="Módulo POS" Grid.Row="0" Grid.Column="0" Foreground="White" Margin="5"
                                   x:Name="chkModuloPos"/>
                            <Button  Content="✏️" Grid.Row="0" Grid.Column="1"
                                 Width="28" Height="28" 
                                 ToolTip="Editar permisos de POS"
                                 Background="#1ABC9C" Foreground="White"
                                 BorderBrush="Transparent"
                                 Cursor="Hand"/>

                            <!-- Modulo Taller -->
                            <CheckBox  IsEnabled="False" Content="Módulo Taller" Grid.Row="1" Grid.Column="0" Foreground="White" Margin="5"
                                   x:Name="chkModuloTaller"/>
                            <Button Content="✏️" Grid.Row="1" Grid.Column="1"
                                 Width="28" Height="28" 
                                 ToolTip="Editar permisos de Taller"
                                 Background="#1ABC9C" Foreground="White"
                                 BorderBrush="Transparent"
                                 Cursor="Hand"/>

                            <!-- Modulo Cartera -->
                            <CheckBox  IsEnabled="False" Content="Módulo Cartera" Grid.Row="2" Grid.Column="0" Foreground="White" Margin="5"
                                   x:Name="chkModuloCartera"/>
                            <Button Content="✏️" Grid.Row="2" Grid.Column="1"
                                 Width="28" Height="28" 
                                 ToolTip="Editar permisos de Cartera"
                                 Background="#1ABC9C" Foreground="White"
                                 BorderBrush="Transparent"
                                 Cursor="Hand"/>

                            <!-- Modulo Nómina -->
                            <CheckBox  IsEnabled="False" Content="Módulo Nómina" Grid.Row="3" Grid.Column="0" Foreground="White" Margin="5"
                                   x:Name="chkModuloNomina"/>
                            <Button Content="✏️" Grid.Row="3" Grid.Column="1"
                                 Width="28" Height="28"  
                                 ToolTip="Editar permisos de Nómina"
                                 Background="#1ABC9C" Foreground="White"
                                 BorderBrush="Transparent"
                                 Cursor="Hand"/>

                            <!-- Modulo Inventarios -->
                            <CheckBox  IsEnabled="False" Content="Módulo Inventarios" Grid.Row="4" Grid.Column="0" Foreground="White" Margin="5"
                                   x:Name="chkModuloinventarios"/>
                            <Button Content="✏️" Grid.Row="4" Grid.Column="1"
                                 Width="28" Height="28" 
                                 ToolTip="Editar permisos de Inventarios"
                                 Background="#1ABC9C" Foreground="White"
                                 BorderBrush="Transparent"
                                 Cursor="Hand"/>

                            <!-- Modulo Contabilidad -->
                            <CheckBox  IsEnabled="False" Content="Módulo Contabilidad" Grid.Row="5" Grid.Column="0" Foreground="White" Margin="5"
                                   x:Name="chkModuloContabilidad"/>
                            <Button Content="✏️" Grid.Row="5" Grid.Column="1"
                                 Width="28" Height="28" 
                                 ToolTip="Editar permisos de Contabilidad"
                                 Background="#1ABC9C" Foreground="White"
                                 BorderBrush="Transparent"
                                 Cursor="Hand"/>
                        </Grid>
                    </GroupBox>
                </Grid>
            </GroupBox>
        </Border>

        <!-- Panel Listado Usuarios -->
        <Border Grid.Column="1" CornerRadius="10" Background="#34495E" Padding="10" Margin="5">
            <GroupBox Header="Listado Usuarios" Foreground="White"
                   FontFamily="Tahoma" FontSize="13" Padding="8">
                <StackPanel>
                    <StackPanel Margin="5">
                        <ListBox x:Name="lstListadoUsuarios" Width="270" Height="300" 
                              HorizontalAlignment="Center" HorizontalContentAlignment="Center"
                              SelectionChanged="lstListadoUsuarios_SelectionChanged"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">
                                <Button x:Name="btnCrear" Content="➕" Width="32" Height="32" Margin="5"
                          Background="White" Foreground="#2A3F54" FontWeight="Bold" Click="btnCrear_Click" />
                                <Button x:Name="btnEditar" Content="✏️" Width="32" Height="32" Margin="5"
                          Background="White" Foreground="#2A3F54" FontWeight="Bold" Click="btnEditar_Click"/>
                                <Button x:Name="btnEliminar" Content="❌" Width="32" Height="32" Margin="5"
                          Background="White" Foreground="#2A3F54" FontWeight="Bold" Click="btnEliminar_Click" />
                                <Button x:Name="btnGuardar" Content="💾" Width="32" Height="32" Margin="5"
                          Background="White" Foreground="#2A3F54" FontWeight="Bold"  Click="btnGuardar_Click"/>
                                <Button x:Name="btnCerrar" Content="🚪" Width="32" Height="32" Margin="5"
                         Background="White" Foreground="#2A3F54" FontWeight="Bold" Click="btnCerrar_Click"></Button>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </Border>
    </Grid>
</UserControl>