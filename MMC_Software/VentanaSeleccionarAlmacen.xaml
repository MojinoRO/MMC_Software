<Window x:Class="MMC_Software.VentanaSeleccionarAlmacen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Background="#2C3E50"
        ResizeMode="NoResize"
        Height="300" Width="500"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">
    <Grid Margin="10">
        <GroupBox Header="Listado Almacén"
                  Foreground="White"
                  FontSize="16"
                  BorderBrush="White"
                  BorderThickness="1"
                  Padding="5">
            <ListBox x:Name="LstAlmacen"
                     FontSize="14"
                     Foreground="Black"
                     Background="White"
                     BorderBrush="#BDC3C7"
                     BorderThickness="1"
                     PreviewKeyDown="LstAlmacen_PreviewKeyDown"
                     MouseDoubleClick="LstAlmacen_MouseDoubleClick"
                     AlternationCount="2">
                <!-- Filas alternadas -->
                <ListBox.Resources>
                    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#4A90E2"/>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="Margin" Value="0"/>
                        <Setter Property="Padding" Value="4,2"/>
                        <Setter Property="BorderBrush" Value="#D0D3D4"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E8F4FF"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#4A90E2"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                <Setter Property="Background" Value="#F8F9F9"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListBox.Resources>

                <!-- Diseño tipo columnas -->
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1.2*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0"
                                       Text="{Binding DatoAlmacen}"
                                       VerticalAlignment="Center"
                                       Margin="5,0"/>

                            <TextBlock Grid.Column="1"
                                       Text="{Binding SaldoActual, StringFormat='{}{0:N2}'}"
                                       VerticalAlignment="Center"
                                       Foreground="Gray"
                                       TextAlignment="Right"
                                       Margin="5,0"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </GroupBox>
    </Grid>
</Window>
