<UserControl x:Class="MMC_Software.VentanaRegistroVentas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d"
             Background="#E8ECF3"
             d:DesignHeight="600" d:DesignWidth="1100"
             xmlns:vm="clr-namespace:MMC_Software">

    <!-- ======================= ESTILOS ======================= -->
    <UserControl.Resources>

        <!-- TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="BorderBrush" Value="#D0D3D4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="2,1"/>
            <Setter Property="Height" Value="20"/>
        </Style>

        <!-- ComboBox -->
        <Style TargetType="ComboBox">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Background" Value="#FBFBFB"/>
            <Setter Property="BorderBrush" Value="#D0D3D4"/>
            <Setter Property="Height" Value="24"/>
        </Style>

        <!-- TextBlock -->
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Titulos -->
        <Style x:Key="HeaderTitulo" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI Semibold"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
        </Style>

        <!-- Botones -->
        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <!-- El Viewbox hace que todo sea responsive -->
    <Viewbox Stretch="Uniform" StretchDirection="Both">
        <Grid Width="1100" Height="600" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="23*"/>
                <ColumnDefinition Width="77*"/>
            </Grid.ColumnDefinitions>

            <!-- FILAS PRINCIPALES -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="357*"/>
                <RowDefinition Height="79*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>


            <!-- ======================= ENCABEZADO ======================= -->
            <Border Grid.Row="0" Background="#E8ECF3" CornerRadius="8"
                    BorderBrush="#D0D3D4" BorderThickness="1"
                    Padding="12" Margin="0 0 0 10" Grid.ColumnSpan="2">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Titulo -->
                    <StackPanel Orientation="Horizontal" Margin="0 0 0 8">
                        <Border Width="40" Height="40" Background="#4A90E2" CornerRadius="8">
                            <TextBlock Text="💰" FontSize="22" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Registro de Ventas" 
                                   FontFamily="Segoe UI Semibold"
                                   FontSize="20"
                                   Margin="10 0 0 0"
                                   Foreground="#2C3E50"
                                   FontWeight="Bold"/>
                    </StackPanel>

                    <!-- Fila 1 -->
                    <Grid Grid.Row="1" Margin="0 0 0 5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1.2*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Documento:" Width="90" FontWeight="Bold"/>
                            <TextBox x:Name="TxtDocumentoVenta" Width="50" Text="{Binding CodigoDocumento ,UpdateSourceTrigger=PropertyChanged}">
                                <TextBox.InputBindings>
                                    <KeyBinding Key="F1" Command="{Binding BuscarDocumento}"/>
                                    <KeyBinding Key="Enter" Command="{Binding DigitarCodigoManual}"/>
                                </TextBox.InputBindings>
                            </TextBox>
                            <TextBox x:Name="TxtNombreDocumentoVenta" Width="260" Margin="5 0 0 0" IsReadOnly="True"
                                     Text="{Binding NombreDocumento , UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Grid.Column="1">
                            <TextBlock Text="N° Venta:" Width="70" FontWeight="Bold"/>
                            <TextBox x:Name="TxtNumeroVenta" Width="80" IsReadOnly="True"
                                       Text="{Binding NumeroVenta, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Grid.Column="2">
                            <TextBlock Text="Fecha:" Width="55" FontWeight="Bold"/>
                            <DatePicker x:Name="dpfecha" SelectedDate="{Binding SaleDate, Mode=TwoWay}"
                                        IsDropDownOpen="{Binding AbrirFecha}">
                                <DatePicker.InputBindings>
                                    <KeyBinding Key="Enter" Command="{Binding CmdFechaEnter}"/>
                                </DatePicker.InputBindings>
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="SelectedDateChanged">
                                        <i:InvokeCommandAction Command="{Binding CSaleDate}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </DatePicker>
                        </StackPanel>
                    </Grid>

                    <!-- Fila 2 -->
                    <Grid Grid.Row="2" Margin="0 0 0 5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="2.5*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Vendedor:" Width="80" FontWeight="Bold"/>
                            <ComboBox x:Name="cbxVendedor" Width="170"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Grid.Column="1">
                            <TextBlock Text="Cliente:" Width="70" FontWeight="Bold"/>
                            <TextBox x:Name="TxtClienteVenta" Width="280" Text="{Binding Identificacion , UpdateSourceTrigger=PropertyChanged}">
                                <TextBox.InputBindings>
                                    <KeyBinding Key="F1" Command="{Binding BuscarTercero}"/>
                                    <KeyBinding Key="Enter" Command="{Binding CmdClienteEnter}"/>
                                </TextBox.InputBindings>
                            </TextBox>
                            <Button x:Name="btnBuscarClienteVenta"  Background="#4A90E2" Margin="5 0 0 0"
                                    Command="{Binding BuscarTercero}" Style="{StaticResource BtnBuscar}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Fila 3 -->
                    <StackPanel Grid.Row="3" Orientation="Horizontal">
                        <TextBlock Text="Observaciones:" Width="110" FontWeight="Bold"/>
                        <TextBox x:Name="TxtObservacionesVenta" Width="500" TextChanged="TxtObservacionesVenta_TextChanged">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Enter" Command="{Binding CmdDetallecomprasEnter}"/>
                            </TextBox.InputBindings>
                        </TextBox>
                        <Button x:Name="btnAgregarProductoVenta" Style="{StaticResource BtnCrearEncabezado}" Width="150"
                                Command="{Binding CmdCrearEncabezadoVenta}">
                            <StackPanel>
                                <TextBlock Text="➕ Agregar Articulos" FontSize="13" HorizontalAlignment="Center" Margin="1"
                                           FontWeight="SemiBold" Foreground="White"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- ======================= TABLA ======================= -->
            <Border Grid.Row="1" CornerRadius="8" BorderBrush="#BDC3C7" BorderThickness="1" Background="White" Padding="10" Margin="0,0,0,-8" Grid.ColumnSpan="2" Grid.RowSpan="3">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <DataGrid x:Name="dgProductos"
                              ItemsSource="{Binding ListadoArticulos}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="True"
                              SelectionUnit="Cell"
                              IsReadOnly="False"
                              IsEnabled="{Binding dgProductos}"
                              Background="#FAFAFA"
                              BorderBrush="#BDC3C7"
                              BorderThickness="1"
                              RowHeight="25"
                              FontSize="13"
                              AlternatingRowBackground="#F2F4F4"
                              HorizontalGridLinesBrush="#E5E8E8"
                              VerticalGridLinesBrush="#E5E8E8"
                              ScrollViewer.CanContentScroll="True"
                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                              MaxHeight="220"
                              PreviewKeyDown="dgProductos_PreviewKeyDown">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="#" Width="30" Binding="{Binding Item}" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Código" Width="70" Binding="{Binding CodigoArticulo ,Mode=OneWay , UpdateSourceTrigger=PropertyChanged}"/>
                            <DataGridTextColumn Header="Descripción" Width="300" Binding="{Binding NombreArticulo, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Almacén" Width="70" Binding="{Binding CodigoAlmacen, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Cantidad" Width="75" Binding="{Binding CantidadVenta, UpdateSourceTrigger=PropertyChanged}"/>
                            <DataGridTextColumn Header="IVA" Width="50" Binding="{Binding IvaArticulo, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Unitario" Width="100" Binding="{Binding ValorUnitario ,UpdateSourceTrigger=PropertyChanged}"/>
                            <DataGridTextColumn Header="Dcto %" Width="80" Binding="{Binding DescuentoVenta , UpdateSourceTrigger=PropertyChanged}"/>
                            <DataGridTextColumn Header="Venta c/IVA" Width="110" Binding="{Binding ValorMasIva, UpdateSourceTrigger=PropertyChanged}"/>
                            <DataGridTextColumn Header="TotalSinIva" Width="110" Binding="{Binding TotalSinIva , UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" />
                            <DataGridTextColumn Header="TotalConIva" Width="110" Binding="{Binding TotalConIva, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>
                        </DataGrid.Columns>

                        <DataGrid.Resources>
                            <!-- Quitar el fondo azul cuando está seleccionada -->
                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" 
                                             Color="Transparent"/>
                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" 
                                             Color="Black"/>

                            <!-- Quitar el fondo azul cuando pierde el foco -->
                            <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" 
                                                Color="Transparent"/>
                            <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}" 
                                         Color="Black"/>
                        </DataGrid.Resources>
                    </DataGrid>

                </Grid>
            </Border>

            <!-- ======================= TOTALES ======================= -->
            <Grid Grid.Row="1" Grid.ColumnSpan="2" Margin="0,287,0,-2" Grid.RowSpan="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="73*"/>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="330"/>
                </Grid.ColumnDefinitions>

                <!-- Totales -->
                <Border Background="White" Padding="10"
                        BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="8" Margin="11,-9,0,4" Grid.ColumnSpan="2">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <!-- Bases -->
                        <StackPanel>
                            <TextBlock Text="Bases / IVA" FontWeight="Bold"/>

                            <StackPanel Orientation="Horizontal" Margin="0 3">
                                <TextBlock Text="Base 19%:" Width="85"/>
                                <TextBox x:Name="txtBase19Venta" Width="120" TextAlignment="Right" IsReadOnly="True"
                                         Text="{Binding Totales.Base19}"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0 3">
                                <TextBlock Text="Base 5%:" Width="85"/>
                                <TextBox x:Name="txtBase5Venta" Width="120" TextAlignment="Right" IsReadOnly="True"
                                         Text="{Binding Totales.Base5}"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0 3">
                                <TextBlock Text="Exento:" Width="85"/>
                                <TextBox x:Name="txtExentoVenta" Width="120" TextAlignment="Right" IsReadOnly="True"
                                         Text="{Binding Totales.Exento}"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0 8">
                                <TextBlock Text="Sub Total:" Width="85" FontWeight="Bold"/>
                                <TextBox x:Name="txtSubTotalVenta" Width="120" TextAlignment="Right" FontWeight="Bold" IsReadOnly="True"
                                         Text="{Binding Totales.BaseGravada}"/>
                            </StackPanel>
                        </StackPanel>


                        <!-- IVA -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Impuestos" FontWeight="Bold"/>

                            <StackPanel Orientation="Horizontal" Margin="0 3">
                                <TextBlock Text="IVA 19%:" Width="80"/>
                                <TextBox x:Name="txtIVA19Venta" Width="110" TextAlignment="Right" IsReadOnly="True"
                                         Text="{Binding Totales.Iva19}"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0 3">
                                <TextBlock Text="IVA 5%:" Width="80"/>
                                <TextBox x:Name="txtIVA5Venta" Width="110" TextAlignment="Right" IsReadOnly="True"
                                         Text="{Binding Totales.Iva5}"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0 3">
                                <TextBlock Text="Descuento:" Width="80"/>
                                <TextBox x:Name="txtDescuentoVenta" Width="110" TextAlignment="Right"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0 8">
                                <TextBlock Text="Total IVA:" Width="80" FontWeight="Bold"/>
                                <TextBox x:Name="txtTotalIVAVenta" Width="110"
                                         TextAlignment="Right" FontWeight="Bold" IsReadOnly="True"
                                         Text="{Binding Totales.TotalIva}"/>
                            </StackPanel>
                        </StackPanel>

                    </Grid>
                </Border>


                <!-- Total General + Botones -->
                <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center">

                    <Border Background="#4A90E2" CornerRadius="8" Margin="0 0 0 0" Padding="6" Width="260" Height="27" >
                        <TextBlock Text="TOTAL VENTA" Foreground="White"
                                   FontSize="18" FontWeight="Bold" TextAlignment="Center"/>
                    </Border>

                    <TextBox x:Name="txtTotalVenta" Margin="0 3 0 0" Width="315" Height="40" FontSize="26"
                             FontWeight="Bold" TextAlignment="Right"
                             Background="#FBFBFB"
                             Foreground="#2C3E50" IsReadOnly="True" Text="{Binding Totales.TotalVenta}"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 0 0 5" Height="55">
                        <Button x:Name="btnNuevaVenta" Width="45" Height="45" Background="#4A90E2"
                                Click="btnNuevaVenta_Click" Style="{StaticResource BtnCrear}"/>

                        <Button x:Name="btnGuardarVenta"  Width="45" Height="45" Background="#2ECC71"
                                Style="{StaticResource BtnGuardar}" Command="{Binding CmdSaveSale}"/>

                        <Button x:Name="btnEditarVenta" Width="45" Height="45" Background="#6C63FF"
                                Style="{StaticResource BtnModificar}"/>

                        <Button x:Name="btnImprimirVenta" Style="{StaticResource BtnImprimir}"
                                Width="45" Height="45"/>

                        <Button x:Name="btnEliminarVenta" Width="45" Height="45" 
                                Style="{StaticResource BtnEliminar}"/>

                        <Button x:Name="btnCerrarVenta" Width="45" Height="45" 
                                Click="btnCerrarVenta_Click" Style="{StaticResource BtnCerrar}"/>
                    </StackPanel>

                </StackPanel>

            </Grid>

        </Grid>
    </Viewbox>
</UserControl>