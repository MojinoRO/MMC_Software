<UserControl x:Class="MMC_Software.VentanaCrearVendedores"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MMC_Software"
        mc:Ignorable="d"
        Height="510" Width="800"
       Background="#2C3E50" Foreground="White">
    <Grid Margin="20" Background="#2C3E50" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- LISTA DE VENDEDORES -->
        <GroupBox Header="Vendedores Registrados" FontSize="14"
                  Margin="10" Grid.Column="0" Foreground="White">
            <ListBox Name="lstVendedores" MouseDoubleClick="lstVendedores_MouseDoubleClick"/>
        </GroupBox>

        <!-- FORMULARIO -->
        <GroupBox Header="Formulario de Registro" FontWeight="Bold" FontSize="14"
                  Margin="10" Grid.Column="1" Foreground="White">
            <StackPanel Margin="20" VerticalAlignment="Top">

                <TextBlock Height="25" Text="Código del Vendedor:" Margin="0,10,0,5"/>
                <TextBox  Height="25" Name="txtCodigo" MaxLength="4" IsEnabled="False" Width="40" Margin="3" HorizontalAlignment="Left"
                          />

                <TextBlock Text="Nombre del Vendedor:" Margin="0,10,0,5"/>
                <TextBox Name="txtNombre" MaxLength="50" IsEnabled="False" TextChanged="txtNombre_TextChanged" Height="25"/>

                <TextBlock Text="Cédula:" Margin="0,10,0,5"/>
                <TextBox PreviewTextInput="txtCedula_PreviewTextInput" Name="txtCedula" MaxLength="10" IsEnabled="False" Height="25" Width="100" HorizontalAlignment="Left"/>

                <TextBlock Text="Estado:" Margin="0,10,0,5"/>
                <ComboBox Name="cmbEstado" IsEnabled="False" DisplayMemberPath="Text" SelectedValuePath="Value"/>

                <Button Content="Mas Opciones..."  FontSize="18" Width="150" Height="30"
                        VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,10,0,5"
                        Click="BtnOpciones_Click" x:Name="BtnOpciones"></Button>

                <!-- BOTONES DE ACCIÓN -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10 0 0" Background="White">
                    <Button x:Name="btnCrear" Content="➕" Width="32" Height="32" Margin="5"
                            Background="#2A3F54" Foreground="White" FontWeight="Bold" Click="btnCrear_Click"/>
                    <Button x:Name="btnEditar" Content="✏️" Width="32" Height="32" Margin="5"
                            Background="#2A3F54" Foreground="White" FontWeight="Bold" Click="btnEditar_Click" />
                    <Button x:Name="btnEliminar" Content="❌" Width="32" Height="32" Margin="5"
                            Background="#2A3F54" Foreground="White" FontWeight="Bold" Click="btnEliminar_Click" />
                    <Button x:Name="btnGuardar" Content="💾" Width="32" Height="32" Margin="5"
                            Background="#2A3F54" Foreground="White" FontWeight="Bold" IsEnabled="True" Click="btnGuardar_Click"/>
                    <Button x:Name="btnSalir" Content="Salir" Width="40" Height="32" Margin="5"
                            Background="#2A3F54" Foreground="White" FontWeight="Bold" IsEnabled="True" Click="btnSalir_Click"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
    </Grid>
</UserControl>
