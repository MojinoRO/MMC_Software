<UserControl x:Class="MMC_Software.DatosEmpresaControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="500">

    <!-- Fondo principal empresarial -->
    <Grid Background="#2B3E5C">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Border Background="White"
                    CornerRadius="10"
                    Padding="20"
                    Margin="20"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 🔹 Encabezado -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 0 0 15">
                        <TextBlock Text="🏢" FontSize="22" Margin="0 0 8 0"/>
                        <TextBlock Text="Datos de la Empresa"
                                   FontSize="22"
                                   FontWeight="SemiBold"
                                   Foreground="#2B3E5C"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- 🔹 Contenedor del formulario -->
                    <Grid Grid.Row="1" Margin="5" x:Name="BaseFormulario" IsEnabled="False">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Nit:" Margin="5" FontWeight="SemiBold" Foreground="#2B3E5C"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Margin="5" Padding="5" Name="TxtEmpresaNit"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Dv:" Margin="5" FontWeight="SemiBold" Foreground="#2B3E5C"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Margin="5" Padding="5" Name="TxtEmpresaDv"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Nombre Empresa:" Margin="5" FontWeight="SemiBold" Foreground="#2B3E5C"/>
                        <TextBox Grid.Row="2" Grid.Column="1" Margin="5" Padding="5" Name="TxtNombreEmpresa"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Establecimiento:" Margin="5" FontWeight="SemiBold" Foreground="#2B3E5C"/>
                        <TextBox Grid.Row="3" Grid.Column="1" Margin="5" Padding="5" Name="TxtEstablecimiento"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Representante Legal:" Margin="5" FontWeight="SemiBold" Foreground="#2B3E5C"/>
                        <TextBox Grid.Row="4" Grid.Column="1" Margin="5" Padding="5" Name="TxtRepresentanteLegal"/>

                        <TextBlock Grid.Row="5" Grid.Column="0" Text="Dirección Empresa:" Margin="5" FontWeight="SemiBold" Foreground="#2B3E5C"/>
                        <TextBox Grid.Row="5" Grid.Column="1" Margin="5" Padding="5" Name="TxtDireccion"/>

                        <TextBlock Grid.Row="6" Grid.Column="0" Text="Teléfono Empresa:" Margin="5" FontWeight="SemiBold" Foreground="#2B3E5C"/>
                        <TextBox Grid.Row="6" Grid.Column="1" Margin="5" Padding="5" Name="TxtTelefono"/>

                        <TextBlock Grid.Row="7" Grid.Column="0" Text="Correo Electrónico:" Margin="5" FontWeight="SemiBold" Foreground="#2B3E5C"/>
                        <TextBox Grid.Row="7" Grid.Column="1" Margin="5" Padding="5" Name="TxtCorreoElectronico"/>
                    </Grid>

                    <!-- 🔹 Botones -->
                    <StackPanel Grid.Row="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0 20 0 0">

                        <!-- ✏️ Modificar -->
                        <Button Content="✏️ Modificar"
                                Width="110" Height="35" Margin="5"
                                FontWeight="SemiBold"
                                Foreground="White"
                                Background="#2B579A"
                                BorderBrush="#2B579A"
                                Cursor="Hand"
                                Click="Button_Click_1">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="6"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="1">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#345EAA"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- 💾 Guardar -->
                        <Button Content="💾 Guardar"
                                Width="110" Height="35" Margin="5"
                                FontWeight="SemiBold"
                                Foreground="White"
                                Background="#107C10"
                                BorderBrush="#107C10"
                                Cursor="Hand"
                                Click="Button_Click"/>

                        <!-- 🚪 Salir -->
                        <Button Content="🚪 Salir"
                                Width="110" Height="35" Margin="5"
                                FontWeight="SemiBold"
                                Foreground="White"
                                Background="#C53030"
                                BorderBrush="#C53030"
                                Cursor="Hand"
                                Click="ButtonSalir_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </ScrollViewer>
    </Grid>
</UserControl>
