<Window x:Class="MMC_Software.VentanaOpcionesPos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Opciones POS" 
        Height="230" Width="360"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#2C3E50">

    <Border Background="#2C3E50" Padding="15" BorderBrush="White" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Encabezado -->
            <TextBlock Text="Configuración POS"
                       Grid.ColumnSpan="2"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,15"/>

            <!-- Base de Caja -->
            <TextBlock Text="Base de Caja:"
                       Grid.Row="1" Grid.Column="0"
                       VerticalAlignment="Center"
                       FontWeight="SemiBold"
                       Foreground="White"
                       Margin="0,0,8,0"/>
            <TextBox x:Name="txtBaseCaja"
                     Grid.Row="1" Grid.Column="1"
                     Height="28"
                     VerticalContentAlignment="Center"
                     Padding="6"
                     Margin="0,2,0,5"
                     Background="White"
                     BorderBrush="Transparent"
                     BorderThickness="0"
                     FontSize="13"
                     Foreground="#2C3E50"
                     ToolTip="Ingrese la base inicial de caja"
                     HorizontalContentAlignment="Center"
                     PreviewTextInput="txtBaseCaja_PreviewTextInput"
                     TextChanged="txtBaseCaja_TextChanged"/>

            <!-- Clave POS -->
            <TextBlock Text="Clave POS:"
                       Grid.Row="2" Grid.Column="0"
                       VerticalAlignment="Center"
                       FontWeight="SemiBold"
                       Foreground="White"
                       Margin="0,0,8,0"/>
            <PasswordBox x:Name="txtClavePos"
                         Grid.Row="2" Grid.Column="1"
                         Height="28"
                         Padding="6"
                         Margin="0,2,0,5"
                         Background="White"
                         BorderBrush="Transparent"
                         BorderThickness="0"
                         FontSize="13"
                         Foreground="#2C3E50"
                         ToolTip="Ingrese la clave del POS"
                         HorizontalContentAlignment="Center"/>

            <!-- Botones -->
            <StackPanel Orientation="Horizontal"
                        Grid.Row="3" Grid.ColumnSpan="2"
                        HorizontalAlignment="Center"
                        Margin="0,15,0,0">
                <!-- Botón Aceptar -->
                <Button x:Name="btnGuardar"
                        Content="Aceptar"
                        Width="90" Height="32"
                        FontWeight="Bold"
                        Foreground="#2C3E50"
                        Background="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0,0,10,0"
                        Click="btnGuardar_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="Foreground" Value="#2C3E50"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#D9D9D9"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Botón Cancelar -->
                <Button x:Name="btnCancelar"
                        Content="Cancelar"
                        Width="90" Height="32"
                        FontWeight="Bold"
                        Foreground="White"
                        BorderBrush="White"
                        BorderThickness="1"
                        Background="Transparent"
                        Cursor="Hand"
                        Click="btnCancelar_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderBrush" Value="White"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="Foreground" Value="#2C3E50"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
