<Window x:Class="MMC_Software.VentanaBuscarTerceros"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Buscar Terceros"
        Height="500" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#E9EEF4"
        FontFamily="Segoe UI">

    <!-- 🌄 Fondo principal con degradado -->
    <Border CornerRadius="10" Padding="20" BorderThickness="1" BorderBrush="#D9D9D9" >
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#E9EEF4" Offset="0.0"/>
                <GradientStop Color="#E9EEF4" Offset="1.0"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 🧭 Encabezado -->
            <TextBlock Text="🔍 Buscar Terceros"
                       FontSize="20"
                       Foreground="Black"
                       FontWeight="Bold"
                       Margin="5 0 0 15"/>

            <!-- 🔎 Barra de búsqueda -->
            <Border Grid.Row="0" Margin="0 40 0 15" CornerRadius="8"
                    Background="#F8F9FA" Padding="8" >
                <DockPanel>
                    <TextBlock Text="🔍" FontSize="16" VerticalAlignment="Center" Margin="5 0"/>
                    <TextBox x:Name="txtBuscar"
                             Width="400" Height="30"
                             BorderThickness="0"
                             Background="Transparent"
                             FontSize="14"
                             VerticalContentAlignment="Center"
                             Foreground="#2C3E50"
                             KeyDown="txtBuscar_KeyDown"
                             ToolTip="Presione Enter para buscar"/>
                    <Button x:Name="btnBuscar"
                            Content="Buscar"
                            Width="100" Height="30"
                            Margin="10 0 0 0"
                            Background="#4A90E2" Foreground="White" FontWeight="Bold"
                            Cursor="Hand" BorderThickness="0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Opacity" Value="1"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="0.85"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Opacity" Value="0.7"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </DockPanel>
            </Border>

            <!-- 📋 DataGrid con diseño empresarial -->
            <Border Grid.Row="1" CornerRadius="8" Background="#FFFFFF" Padding="8" >
                <DataGrid x:Name="dgTerceros"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          SelectionMode="Single"
                          SelectionUnit="FullRow"
                          BorderThickness="0"
                          AlternatingRowBackground="#F8F9FA"
                          GridLinesVisibility="None"
                          RowBackground="White"
                          FontSize="13"
                          RowHeight="32"
                          ScrollViewer.CanContentScroll="True"
                          MouseDoubleClick="dgTerceros_MouseDoubleClick"
                          PreviewKeyDown="dgTerceros_PreviewKeyDown">

                    <!-- 🎨 Estilos visuales -->
                    <DataGrid.Resources>
                        <!-- Encabezado -->
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#4A90E2"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Height" Value="35"/>
                            <Setter Property="BorderBrush" Value="#4A90E2"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>

                        <!-- Filas -->
                        <Style TargetType="DataGridRow">
                            <Setter Property="SnapsToDevicePixels" Value="True"/>
                            <Setter Property="Margin" Value="2 1"/>
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="#000000" BlurRadius="3" ShadowDepth="0" Opacity="0.08"/>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Background" Value="White"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E8F0FE"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#D6EAF8"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Tipo" Binding="{Binding TipoDocumento}" Width="100" />
                        <DataGridTextColumn Header="NIT / CC" Binding="{Binding TercerosIdentificacion}" Width="150" />
                        <DataGridTextColumn Header="Nombre / Razón Social" Binding="{Binding TerceroNobres}" Width="*" />
                        <DataGridTextColumn Header="Correo" Binding="{Binding TerceroEmail}" Width="200" />
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- ✅ Botón seleccionar -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">
                <TextBlock Text="Presione Enter para buscar o seleccione un registro:"
                           Foreground="#BDC3C7" FontSize="12" VerticalAlignment="Center" Margin="0 10 15 0"/>

                <Button x:Name="btnSeleccionar" Content="Seleccionar"
                        Width="130" Height="35"
                        Background="#4A90E2" Foreground="White" FontWeight="Bold"
                        BorderThickness="0" Cursor="Hand" Margin="0 10 0 0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Opacity" Value="1"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.85"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Opacity" Value="0.7"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>

        </Grid>
    </Border>
</Window>
