<Window x:Class="MMC_Software.ModuloPuntoVenta"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MMC_Software"
        mc:Ignorable="d"
        Title="ModuloPuntoVenta" Height="650" Width="1100"
        Background="#F5F6FA"
        WindowStyle="SingleBorderWindow"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Closing="Window_Closing">

    <Window.Resources>
        <!-- TextBox compacto (aplica por defecto) -->
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="2,0"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Height" Value="22"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- GroupBox compacto -->
        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderBrush" Value="#2C3E50"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <!-- DataGrid compacto -->
        <Style TargetType="DataGrid">
            <Setter Property="RowHeight" Value="24"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F0F2F5"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#2C3E50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="4"/>
        </Style>
    </Window.Resources>

    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ENCABEZADO más pequeño -->
        <Border Background="#2C3E50" CornerRadius="4" Padding="4" Margin="4" Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="PUNTO DE VENTA 🛒"
                           Grid.Column="0"
                           Foreground="White"
                           FontSize="38"
                           FontWeight="Bold"
                           VerticalAlignment="Center" HorizontalAlignment="Center"/>

                <StackPanel Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock Text="TOTAL FACTURA"
                               Foreground="White"
                               FontWeight="Bold"
                               FontSize="20"
                               HorizontalAlignment="Center"/>
                    <TextBox x:Name="TxtTotalGeneral"
                             Text="0"
                             Width="295"
                             Height="44"
                             FontWeight="Bold"
                             FontSize="35"
                             Foreground="White"
                             Background="#2C3E50"
                             BorderBrush="Transparent"
                             HorizontalContentAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- CUERPO -->
        <Grid Grid.Row="1" Margin="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- LISTADO DE PRODUCTOS -->
            <GroupBox Header="Listado de Artículos" Grid.Column="0" FontSize="13">
                <DockPanel LastChildFill="True" Margin="6">
                    <!-- Buscador -->
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,6">
                        <StackPanel Margin="3">
                            <TextBlock Text="Artículo" FontSize="11" FontWeight="Bold"/>
                            <TextBox x:Name="cmbArticuloBusqueda" Width="100" Height="22"
                                     KeyDown="cmbArticuloBusqueda_KeyDown"/>
                        </StackPanel>
                        <StackPanel Margin="3">
                            <TextBlock Text="Nombre Artículo" FontSize="11" FontWeight="Bold"/>
                            <TextBox x:Name="txtNombreArticulo" Width="260" Height="22"/>
                        </StackPanel>
                        <StackPanel Margin="3">
                            <TextBlock Text="Cantidad" FontSize="11" FontWeight="Bold"/>
                            <TextBox x:Name="txtCantidadBusqueda" Width="70" Height="22"
                                     KeyDown="txtCantidadBusqueda_KeyDown"
                                     PreviewTextInput="txtCantidadBusqueda_PreviewTextInput"/>
                        </StackPanel>
                        <StackPanel Margin="3">
                            <TextBlock Text="Precio" FontSize="11" FontWeight="Bold" />
                            <TextBox x:Name="TxtPrecio" Width="80" Height="22"
                                     LostFocus="TxtPrecio_LostFocus"
                                     KeyDown="TxtPrecio_KeyDown"/>
     
                        </StackPanel>

                        <StackPanel Margin="3" >
                            <TextBlock Width="10" ></TextBlock>
                            <Button Content="✏️" Height="22" Width="25" x:Name="BtnIditarPrecio" Click="BtnIditarPrecio_Click"
                                    Foreground="#2C3E50" Background="Transparent" FontWeight="Bold" IsEnabled="False"></Button>
                        </StackPanel>
                    </StackPanel>

                    <!-- DataGrid -->
                    <DataGrid x:Name="dgProductos"
                              AutoGenerateColumns="False"
                              CanUserAddRows="True"
                              HeadersVisibility="Column"
                              Margin="4"
                              RowHeight="24"
                              FontFamily="Segoe UI"
                              FontSize="12"
                              IsReadOnly="True"
                              MouseDoubleClick="dgProductos_MouseDoubleClick">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Item" Binding="{Binding Item}" Width="40"/>
                            <DataGridTextColumn Header="Código" Binding="{Binding Codigo}" Width="70"/>
                            <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                            <DataGridTextColumn Header="Almacén" Binding="{Binding AlmacenVenta}" Width="70"/>
                            <DataGridTextColumn Header="Cant" Binding="{Binding CantidadVenta}" Width="70"/>
                            <DataGridTextColumn Header="IVA" Binding="{Binding IVA}" Width="50"/>
                            <DataGridTextColumn Header="Unitario" Binding="{Binding PrecioUnitario}" Width="90"/>
                            <DataGridTextColumn Header="Precio" Binding="{Binding PrecioTotal}" Width="100"/>
                            <DataGridTextColumn Header="TotalSinIva" Binding="{Binding TotalSinIva}" Width="100"/>
                            <DataGridTextColumn Header="TotalConIva" Binding="{Binding TotalConIva}" Width="100"/>
                        </DataGrid.Columns>
                        <DataGrid.Background>
                            <ImageBrush ImageSource="/Background/LogoEmpresa.png"  Opacity="0.3"/>
                        </DataGrid.Background>
                    </DataGrid>
                </DockPanel>
            </GroupBox>

            <!-- PANEL DERECHO compactado (Totales primero) -->
            <StackPanel Grid.Column="1" Margin="2">

                <!-- Totales (completo y compacto) -->
                <GroupBox Header="Totales" FontSize="12" Margin="2">
                    <Grid Margin="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="110"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- Exento -->
                            <RowDefinition Height="Auto"/>
                            <!-- Base 19 -->
                            <RowDefinition Height="Auto"/>
                            <!-- IVA 19 -->
                            <RowDefinition Height="Auto"/>
                            <!-- Base 5 -->
                            <RowDefinition Height="Auto"/>
                            <!-- IVA 5 -->
                            <RowDefinition Height="Auto"/>
                            <!-- Descuentos -->
                            <RowDefinition Height="Auto"/>
                            <!-- ReteFuente -->
                            <RowDefinition Height="Auto"/>
                            <!-- Subtotal -->
                            <RowDefinition Height="Auto"/>
                            <!-- Total IVA -->
                        </Grid.RowDefinitions>

                        <TextBlock Text="Exento:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" FontSize="11"/>
                        <TextBox x:Name="txtExento" Grid.Row="0" Grid.Column="1" IsReadOnly="True" Grid.ColumnSpan="2"/>

                        <TextBlock Text="Base 19%:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" FontSize="11"/>
                        <TextBox x:Name="txtBase19" Grid.Row="1" Grid.Column="1" IsReadOnly="True" Grid.ColumnSpan="2"/>

                        <TextBlock Text="IVA 19:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" FontSize="11"/>
                        <TextBox x:Name="txtIVA19" Grid.Row="2" Grid.Column="1" IsReadOnly="True" Grid.ColumnSpan="2"/>

                        <TextBlock Text="Base 5%:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" FontSize="11"/>
                        <TextBox x:Name="txtBase5" Grid.Row="3" Grid.Column="1" IsReadOnly="True" Grid.ColumnSpan="2"/>

                        
                        <TextBlock Text="IVA 5%:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" FontSize="11"/>
                        <TextBox x:Name="txtIVA5" Grid.Row="4" Grid.Column="1" IsReadOnly="True" Grid.ColumnSpan="2"/>

                        <TextBlock Text="Descuentos:" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" FontSize="11"/>
                        <TextBox x:Name="txtDescuentos" Grid.Row="5" Grid.Column="1" IsReadOnly="True" Grid.ColumnSpan="2"/>

                        <TextBlock Text="ReteFuente:" Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" FontSize="11"/>
                        <TextBox x:Name="txtReteFuente" Grid.Row="6" Grid.Column="1" IsReadOnly="True"  Grid.ColumnSpan="2"/>

                        <TextBlock Text="Subtotal:" Grid.Row="7" Grid.Column="0" VerticalAlignment="Center" FontSize="11"/>
                        <TextBox x:Name="txtSubtotal" Grid.Row="7" Grid.Column="1" IsReadOnly="True" Grid.ColumnSpan="2"/>

                        <TextBlock Text="Total IVA:" Grid.Row="8" Grid.Column="0" VerticalAlignment="Center" FontSize="11"/>
                        <TextBox x:Name="txtTotalIva" Grid.Row="8" Grid.Column="1" IsReadOnly="True" Grid.ColumnSpan="2"/>
                    </Grid>
                </GroupBox>

                <!-- Documento y Cliente (completo y compacto) -->
                <GroupBox Header="Documento y Cliente" FontSize="12" Margin="2">
                    <Grid Margin="6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- Docto -->
                            <RowDefinition Height="Auto"/>
                            <!-- Número -->
                            <RowDefinition Height="Auto"/>
                            <!-- Nombre Doc -->
                            <RowDefinition Height="Auto"/>
                            <!-- Nit/DV -->
                            <RowDefinition Height="Auto"/>
                            <!-- Cliente -->
                            <RowDefinition Height="Auto"/>
                            <!-- Vendedor -->
                            <RowDefinition Height="Auto"/>
                            <!-- Almacén -->
                            <RowDefinition Height="Auto"/>
                            <!-- Fecha -->
                            <RowDefinition Height="Auto"/>
                            <!-- Detalle -->
                        </Grid.RowDefinitions>

                        <TextBlock Text="Docto:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" FontSize="11"/>
                        <TextBox x:Name="txtDocumento" Grid.Row="0" Grid.Column="1" Height="22" Width="50" HorizontalAlignment="Left"
                                 IsEnabled="False"/>

                        <TextBlock Text="Número:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" FontSize="11"/>
                        <TextBox x:Name="txtNumero" Grid.Row="1" Grid.Column="1" Height="22" Width="80" IsEnabled="False" 
                                 HorizontalAlignment="Left"/>
                        <TextBox x:Name="TxtHora" Foreground="#2C3E50" FontWeight="Bold" Grid.Column="2" Grid.Row="1"
                             Width="70" Background="Transparent" BorderBrush="Transparent" HorizontalAlignment="Right"
                             Height="26" FontSize="15" HorizontalContentAlignment="Center" IsReadOnly="True"></TextBox>

                        <TextBlock Text="Nombre Doc:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" FontSize="11"/>
                        <TextBox x:Name="TxtNombreDocumento" Grid.Row="2" Grid.Column="1" Height="22"/>

                        <TextBlock Text="Nit/CC:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" FontSize="11"/>
                        <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="1">
                            <TextBox x:Name="TxtNitCC" Width="100" Height="22" KeyDown="TxtNitCC_KeyDown" IsEnabled="False"/>
                            <TextBlock Text="DV:" VerticalAlignment="Center" Margin="5,0" FontSize="11"/>
                            <TextBox x:Name="TxtDV" Width="30" Height="22"/>
                        </StackPanel>

                        <TextBlock Text="Cliente:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" FontSize="11"/>
                        <TextBox x:Name="TxtNombreCompleto" Grid.Row="4" Grid.Column="1" Height="22"/>

                        <TextBlock Text="Vendedor:" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" FontSize="11"/>
                        <TextBox x:Name="txtVendedor" Grid.Row="5" Grid.Column="1" Height="22"/>

                        <TextBlock Text="Almacén:" Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" FontSize="11"/>
                        <TextBox x:Name="txtAlmacen" Grid.Row="6" Grid.Column="1" Height="22"/>

                        <TextBlock Text="Fecha:" Grid.Row="7" Grid.Column="0" VerticalAlignment="Center" FontSize="11"/>
                        <TextBox x:Name="dpFecha" Grid.Row="7" Grid.Column="1" Height="22"/>
                        
                        <TextBlock Text="Detalle:" Grid.Row="8" Grid.Column="0" VerticalAlignment="Center" FontSize="11"/>
                        <TextBox x:Name="TxtDetalle" Grid.Row="8" Grid.Column="1" Height="32"/>

                    </Grid>
                </GroupBox>
            </StackPanel>
        </Grid>

        <!-- FOOTER -->
        <Grid Grid.Row="2">
            <StatusBar Background="#2C3E50" Height="30" Margin="0,6,0,0">
                <StatusBarItem>
                    <TextBlock Text="F1 → Buscar artículo" Foreground="White" FontWeight="Bold" Margin="10,0"/>
                </StatusBarItem>
                <StatusBarItem>
                    <TextBlock Text="F5 → Eliminar artículo" Foreground="White" FontWeight="Bold" Margin="5,0"/>
                </StatusBarItem>
                <StatusBarItem>
                    <TextBlock Text="F3 → Buscar Ciente" Foreground="White" FontWeight="Bold" Margin="5,0"/>
                </StatusBarItem>
                <StatusBarItem>
                    <TextBlock Text="F4 → Guardar Venta" Foreground="White" FontWeight="Bold" Margin="10,0"/>
                </StatusBarItem>
                <StatusBarItem>
                    <TextBlock Text="Doble Click → Modifica Item" Foreground="White" FontWeight="Bold" Margin="10,0"/>
                </StatusBarItem>
                <Button Width="26" Height="28"
                        Background="White" BorderBrush="Transparent"
                        Content="🔍" FontSize="13" Click="Button_Click" ToolTip="Buscador De Documentos"/>
                <Button Width="25" Height="28" BorderBrush="Transparent" Content="📊"
                        Background="White" FontSize="13" Click="ButtonCierre_Click" ToolTip="Generar Cierre Caja"></Button>
                <Button Content="💸" Background="White" BorderBrush="Transparent"
                        Width="25" Height="28" FontSize="15" Click="BtnRetiros_Click" ToolTip="Generar Retiros Caja"
                        x:Name="BtnRetiros"></Button>
            </StatusBar>
        </Grid>
    </Grid>
</Window>
