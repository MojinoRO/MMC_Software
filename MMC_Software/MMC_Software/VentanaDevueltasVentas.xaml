<Window x:Class="MMC_Software.VentanaDevueltasVentas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Devueltas en Venta"
        Height="740" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#F5F6FA"
        WindowStyle="None">

    <Window.Resources> 
        <!-- 🎨 Estilo para los botones de billetes y monedas -->
        <Style x:Key="MoneyButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <!-- Hover -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#2563EB" BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.08" ScaleY="1.08"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>

                <!-- Click -->
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20" Background="#2C3E50">
        <Grid.RowDefinitions>
            <!-- título -->
            <RowDefinition Height="Auto"/>
            <!-- contenido -->
            <RowDefinition Height="*"/>
            <!-- Totales -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Text="Seleccione Denominación para Devuelta"
                   FontSize="24" FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"/>

        <!-- 🔲 Billetes + Monedas -->
        <Border Grid.Row="1" CornerRadius="12" Background="#2C3E50" Padding="20"
                BorderBrush="#E5E7EB" BorderThickness="1">
            <WrapPanel HorizontalAlignment="Center">
                <!-- Billetes -->
                <Button Style="{StaticResource MoneyButtonStyle}" Click="Button2k_Click">
                    <Image Source="/Images/2000.png" Width="220" Height="115"
/>
                </Button>
                <Button Style="{StaticResource MoneyButtonStyle}" Click="Button5K_Click">
                    <Image Source="/Images/5000.png" Width="220" Height="115"/>
                </Button>
                <Button Style="{StaticResource MoneyButtonStyle}" Click="Button10K_Click">
                    <Image Source="/Images/10000.png" Width="220" Height="115"/>
                </Button>
                <Button Style="{StaticResource MoneyButtonStyle}" Click="Button20K_Click">
                    <Image Source="/Images/20000.png" Width="220" Height="115"/>
                </Button>
                <Button Style="{StaticResource MoneyButtonStyle}" Click="Button50K_Click">
                    <Image Source="/Images/50000.png" Width="220" Height="115"/>
                </Button>
                <Button Style="{StaticResource MoneyButtonStyle}" Click="Button100K_Click">
                    <Image Source="/Images/100000.png" Width="220" Height="115"/>
                </Button>

                <!-- Monedas -->
                <Button Style="{StaticResource MoneyButtonStyle}" Width="85" Height="85" Padding="0" Click="ButtonM1K_Click">
                    <Image Source="/Images/1k.png" Stretch="Uniform"/>
                </Button>
                <Button Style="{StaticResource MoneyButtonStyle}" Width="85" Height="85" Padding="0" Click="ButtonM500K_Click">
                    <Image Source="/Images/500.png" Stretch="Uniform"/>
                </Button>
                <Button Style="{StaticResource MoneyButtonStyle}" Width="85" Height="85" Padding="0" Click="ButtonM200K_Click">
                    <Image Source="/Images/200.png" Stretch="Uniform"/>
                </Button>
                <Button Style="{StaticResource MoneyButtonStyle}" Width="85" Height="85" Padding="0" Click="ButtonM100K_Click">
                    <Image Source="/Images/100.png" Stretch="Uniform"/>
                </Button>
                <Button Style="{StaticResource MoneyButtonStyle}" Width="85" Height="85" Padding="0" Click="ButtonM50K_Click">
                    <Image Source="/Images/50.png" Stretch="Uniform"/>
                </Button>
            </WrapPanel>
        </Border>
        <Border Grid.Row="2" Background="#2C3E50">
            <GroupBox >
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="5" Text="Valor A pagar:  " FontFamily="Tahoma" HorizontalAlignment="Left"
                                   VerticalAlignment="Center" FontSize="40"
                                   FontWeight="Bold" Foreground="White" />
                        <TextBox Margin="5" Width="600" Height="70" Background="Transparent"
                                 BorderBrush="Transparent" HorizontalContentAlignment="Center" IsEnabled="False"
                                 x:Name="TxtValorApagar" FontSize="40" FontWeight="Bold"  Foreground="White"/>
                    </StackPanel>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Margin="5" Text="Entregado:" FontFamily="Tahoma" HorizontalAlignment="Center"
                                   VerticalAlignment="Center" FontSize="40"
                                   FontWeight="Bold" Foreground="White"/>
                            <TextBox Margin="5" Background="White" Width="600" Height="70" PreviewTextInput="TxtValorRecibido_PreviewTextInput"
                                     x:Name="TxtValorRecibido" FontSize="40" FontWeight="Bold" HorizontalContentAlignment="Center"
                                     KeyDown="TxtValorRecibido_KeyDown"/>
                            <Button x:Name="BtnRefrescar" Background="Transparent"  BorderBrush="Transparent" Height="100"
                                    Content="🔄" FontSize="70" FontWeight="Bold" Foreground="Red"
                                    Style="{StaticResource MoneyButtonStyle}" Click="BtnRefrescar_Click"/>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="5" Text="Cambio:     " FontFamily="Tahoma" HorizontalAlignment="Center"
                                   VerticalAlignment="Center" FontSize="40"
                                   FontWeight="Bold" Foreground="White"/>
                        <TextBox Margin="5" Width="594" Height="70" Background="Transparent"
                                 BorderBrush="Transparent" HorizontalContentAlignment="Center" IsEnabled="False"
                                 x:Name="TxtVueltas" FontSize="40" FontWeight="Bold" Foreground="White"/>
                        <Button x:Name="BtnAceptar" Background="Transparent" Height="100" BorderBrush="Transparent"
                                Content="✅" FontSize="70" FontWeight="Bold" Foreground="Green"
                                Style="{StaticResource MoneyButtonStyle}" Click="BtnAceptar_Click" Width="107"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </Border>
        <Border>
            <GroupBox>
                <StackPanel>
                    <StackPanel>

                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </Border>
    </Grid>
</Window>
