<Window x:Class="MMC_Software.VentanaConteoDinero"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CONTEO DE CAJA" Height="600" Width="500"
        WindowStartupLocation="CenterScreen" Background="#2C3E50">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="15">
            <TextBlock Text="CONTEO DE CAJA" Foreground="White" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>

            <!-- DATOS DE FILTRO -->
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Fecha:" Width="120" Foreground="White"/>
                <DatePicker IsEnabled="False" Foreground="Black"
                            Name="dpFechaConteo"></DatePicker>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Vendedor:" Width="120" Foreground="White"/>
                <ComboBox Width="200" x:Name="cmbVendedorSeleccionado"/>
            </StackPanel>

            <!-- =================== BILLETES =================== -->
            <Expander Header="Conteo de Billetes" Foreground="White" Background="#34495E" Padding="10" Margin="5">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <TextBlock Text="Billete 100,000" Width="120" Foreground="White"/>
                        <TextBox x:Name="txtCant100000" Width="80" Height="30" FontSize="14" 
                                 PreviewTextInput="TxtCantMoneda_PreviewTextInput" HorizontalContentAlignment="Center"
                                 TextChanged="txtCant100000_TextChanged"/>
                        <TextBox x:Name="txtTotal100000" Width="140" Height="30" FontSize="14" IsReadOnly="True" HorizontalContentAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <TextBlock Text="Billete 50,000" Width="120" Foreground="White"/>
                        <TextBox x:Name="txtCant50000" Width="80" Height="30" FontSize="14"
                                 PreviewTextInput="TxtCantMoneda_PreviewTextInput" HorizontalContentAlignment="Center"
                                 TextChanged="txtCant50000_TextChanged"/>
                        <TextBox x:Name="txtTotal50000" Width="140" Height="30" FontSize="14" IsReadOnly="True" HorizontalContentAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <TextBlock Text="Billete 20,000" Width="120" Foreground="White"/>
                        <TextBox x:Name="txtCant20000" Width="80" Height="30" FontSize="14" 
                                 PreviewTextInput="TxtCantMoneda_PreviewTextInput" HorizontalContentAlignment="Center" TextChanged="txtCant20000_TextChanged"/>
                        <TextBox x:Name="txtTotal20000" Width="140" Height="30" FontSize="14" IsReadOnly="True" HorizontalContentAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <TextBlock Text="Billete 10,000" Width="120" Foreground="White"/>
                        <TextBox x:Name="txtCant10000" Width="80" Height="30" FontSize="14" 
                                 PreviewTextInput="TxtCantMoneda_PreviewTextInput" HorizontalContentAlignment="Center"
                                 TextChanged="txtCant10000_TextChanged"/>
                        <TextBox x:Name="txtTotal10000" Width="140" Height="30" FontSize="14" IsReadOnly="True" HorizontalContentAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <TextBlock Text="Billete 5,000" Width="120" Foreground="White"/>
                        <TextBox x:Name="txtCant5000" Width="80" Height="30" FontSize="14" 
                                 PreviewTextInput="TxtCantMoneda_PreviewTextInput" HorizontalContentAlignment="Center"
                                 TextChanged="txtCant5000_TextChanged"/>
                        <TextBox x:Name="txtTotal5000" Width="140" Height="30" FontSize="14" IsReadOnly="True" HorizontalContentAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <TextBlock Text="Billete 2,000" Width="120" Foreground="White"/>
                        <TextBox x:Name="txtCant2000" Width="80" Height="30" FontSize="14" 
                                 PreviewTextInput="TxtCantMoneda_PreviewTextInput" HorizontalContentAlignment="Center"
                                 TextChanged="txtCant2000_TextChanged"/>
                        <TextBox x:Name="txtTotal2000" Width="140" Height="30" FontSize="14" IsReadOnly="True" HorizontalContentAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </Expander>

            <!-- =================== MONEDAS =================== -->
            <Expander Header="Conteo de Monedas" Foreground="White" Background="#34495E" Padding="10" Margin="5"
                      IsExpanded="False">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <TextBlock Text="Moneda 1,000" Width="120" Foreground="White"/>
                        <TextBox x:Name="txtCant1000" Width="80" Height="30" FontSize="14" 
                                 PreviewTextInput="TxtCantMoneda_PreviewTextInput" HorizontalContentAlignment="Center"
                                 TextChanged="txtCant1000_TextChanged"/>
                        <TextBox x:Name="txtTotal1000" Width="140" Height="30" FontSize="14" IsReadOnly="True" HorizontalContentAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <TextBlock Text="Moneda 500" Width="120" Foreground="White"/>
                        <TextBox x:Name="txtCant500" Width="80" Height="30" FontSize="14" 
                                 PreviewTextInput="TxtCantMoneda_PreviewTextInput" HorizontalContentAlignment="Center"
                                 TextChanged="txtCant500_TextChanged"/>
                        <TextBox x:Name="txtTotal500" Width="140" Height="30" FontSize="14" IsReadOnly="True" HorizontalContentAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <TextBlock Text="Moneda 200" Width="120" Foreground="White"/>
                        <TextBox x:Name="txtCant200" Width="80" Height="30" FontSize="14" 
                                 PreviewTextInput="TxtCantMoneda_PreviewTextInput" HorizontalContentAlignment="Center"
                                 TextChanged="txtCant200_TextChanged"/>
                        <TextBox x:Name="txtTotal200" Width="140" Height="30" FontSize="14" IsReadOnly="True" HorizontalContentAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <TextBlock Text="Moneda 100" Width="120" Foreground="White"/>
                        <TextBox x:Name="txtCant100" Width="80" Height="30" FontSize="14" 
                                 PreviewTextInput="TxtCantMoneda_PreviewTextInput" HorizontalContentAlignment="Center"
                                 TextChanged="txtCant100_TextChanged"/>
                        <TextBox x:Name="txtTotal100" Width="140" Height="30" FontSize="14" IsReadOnly="True" HorizontalContentAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <TextBlock Text="Moneda 50" Width="120" Foreground="White"/>
                        <TextBox x:Name="txtCant50" Width="80" Height="30" FontSize="14" 
                                 PreviewTextInput="TxtCantMoneda_PreviewTextInput" HorizontalContentAlignment="Center"
                                 TextChanged="txtCant50_TextChanged"/>
                        <TextBox x:Name="txtTotal50" Width="140" Height="30" FontSize="14" IsReadOnly="True" HorizontalContentAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </Expander>
            <!-- =================== TOTAL =================== -->
            <StackPanel Orientation="Horizontal" Margin="10,20,0,0">
                <TextBlock Text="TOTAL:" Width="120" Foreground="White" FontWeight="Bold" FontSize="16"/>
                <TextBox x:Name="TxtTotalGeneral" Width="200" Height="30" 
                         FontWeight="Bold" FontSize="16" HorizontalAlignment="Center"
                         HorizontalContentAlignment="Center"/>
            </StackPanel>
            <!-- =================== BOTÓN =================== -->
            <Button Content="Generar Conteo" Width="450" Height="40"
                    Margin="0,20,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"
                    Background="#1ABC9C" Foreground="White" FontWeight="Bold" Click="Button_Click"/>
        </StackPanel>
    </ScrollViewer>
</Window>
