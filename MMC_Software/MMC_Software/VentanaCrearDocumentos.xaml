<UserControl x:Class="MMC_Software.VentanaCrearDocumentos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MMC_Software"
        mc:Ignorable="d"
        Height="580" Width="800">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LISTA DE DOCUMENTOS -->
        <Border Grid.Column="0" Background="White" CornerRadius="10" Padding="10" BorderBrush="#D0D0D0" BorderThickness="1" >
            <StackPanel>
                <TextBlock Text="Documentos existentes" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                <ListBox x:Name="lstDocumentos" Height="461" MouseDoubleClick="lstDocumentos_MouseDoubleClick"/>
            </StackPanel>
        </Border>

        <!-- FORMULARIO DE CREACIÓN / EDICIÓN -->
        <Border Grid.Column="2" Background="White" CornerRadius="10" Padding="20" BorderBrush="#D0D0D0" BorderThickness="1">
            <StackPanel VerticalAlignment="Top" Width="400">
                <TextBlock Text="Crear / Editar Documento" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

                <TextBlock Text="Tipo de documento:"/>
                <ComboBox x:Name="cmbTipoDocumento" Margin="0,5,0,15" IsEnabled="False"/>

                <TextBlock Text="SubCentro de Costo:"/>
                <ComboBox x:Name="cmbSubCentroCosto"
                          IsEnabled="False"
                          DisplayMemberPath="Nombre"
                          SelectedValuePath="SubCentroCostoID"
                          Margin="0,5,0,15"/>

                <TextBlock Text="Nombre del documento:"/>
                <TextBox x:Name="txtNombreDocumento" IsEnabled="False" Margin="0,5,0,15" Height="29" FontSize="14" 
                         TextChanged="txtNombreDocumento_TextChanged"/>

                <TextBlock Text="Código del documento:"/>
                <TextBox x:Name="txtCodigoDocumento" IsEnabled="False" Margin="0,5,0,15" Width="50" HorizontalAlignment="Left" Height="24"/>

                <TextBlock Text="Consecutivo actual:"/>
                <TextBox x:Name="txtConsecutivo" IsEnabled="False" Margin="0,5,0,15" 
                         Width="50" HorizontalAlignment="Left" Height="25"
                         PreviewTextInput="txtConsecutivo_PreviewTextInput"/>

                <TextBlock Text="Formato de impresión:"/>
                <TextBox x:Name="txtFormatoImpresion" IsEnabled="False" Margin="0,5,0,25"
                         Width="90" HorizontalAlignment="Left" Height="25" />

                <!-- BOTONES -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="btnCrear" Content="➕" Width="32" Height="32" Margin="5"
                            Background="#2A3F54" Foreground="White" FontWeight="Bold" Click="btnCrear_Click" />
                    <Button x:Name="btnEditar" Content="✏️" Width="32" Height="32" Margin="5"
                            Background="#2A3F54" Foreground="White" FontWeight="Bold"  Click="btnEditar_Click"/>
                    <Button x:Name="btnEliminar" Content="❌" Width="32" Height="32" Margin="5"
                            Background="#2A3F54" Foreground="White" FontWeight="Bold" Click="btnEliminar_Click" />
                    <Button x:Name="btnGuardar" Content="💾" Width="32" Height="32" Margin="5"
                            Background="#2A3F54" Foreground="White" FontWeight="Bold"  Click="btnGuardar_Click"/>
                    <Button x:Name="btnSalir" Content="Salir" Width="32" Height="32" Margin="5"
                            Background="#2A3F54" Foreground="White" FontWeight="Bold"  Click="btnSalir_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
