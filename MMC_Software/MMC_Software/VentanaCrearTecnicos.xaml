<UserControl x:Class="MMC_Software.VentanaCrearTecnicos"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MMC_Software"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White" Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="437*"/>
            <ColumnDefinition Width="353*"/>
        </Grid.ColumnDefinitions>
        <GroupBox Margin="5" Grid.Column="0" Header="Creacion De Tecnicos" FontSize="16"
                  FontFamily="Tahoma" Background="#F4F6F9">
            <StackPanel Margin="5">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="5" Text="Cedula Tecnico:  "></TextBlock>
                    <TextBox x:Name="txtCedula" Margin="5" Width="100"
                             KeyDown="txtCedula_KeyDown"></TextBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Nombre Tecnico:" Margin="5"></TextBlock>
                    <TextBox x:Name="txtNombre" Margin="5" Width="270"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Telefono:           " Margin="5"></TextBlock>
                    <TextBox x:Name="txtcelular" Margin="5" Width="100"></TextBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Codigo Interno:  " Margin="5"></TextBlock>
                    <TextBox x:Name="txtCodigo" Width="60" Margin="5" MaxLength="3"></TextBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Esado Tecnico  : " Margin="5"></TextBlock>
                    <ComboBox x:Name="cmbEstado" Margin="5" Width="120"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">
                    <Button x:Name="btnCrear" Content="➕" Width="32" Height="32" Margin="5"
                             Background="#2A3F54" Foreground="White" FontWeight="Bold" Click="btnCrear_Click"/>
                    <Button x:Name="btnEditar" Content="✏️" Width="32" Height="32" Margin="5"
                             Background="#2A3F54" Foreground="White" FontWeight="Bold" Click="btnEditar_Click"/>
                    <Button x:Name="btnEliminar" Content="❌" Width="32" Height="32" Margin="5"
                             Background="#2A3F54" Foreground="White" FontWeight="Bold" Click="btnEliminar_Click"/>
                    <Button x:Name="btnGuardar" Content="💾" Width="32" Height="32" Margin="5"
                             Background="#2A3F54" Foreground="White" FontWeight="Bold" Click="btnGuardar_Click" />
                    <Button x:Name="btnCerrar" Content="🚪" Width="32" Height="32" Margin="5"
                            Background="#2A3F54" Foreground="White" FontWeight="Bold" Click="btnCerrar_Click"></Button>
                </StackPanel>
            </StackPanel>
        </GroupBox>
        <GroupBox Grid.Column="1" Header="Listado Vendedores" FontSize="16" FontFamily="Tahoma"
                  Background="#F4F6F9">
            <ListBox x:Name="lstTecnicosCreados" Margin="5" SelectionChanged="lstTecnicosCreados_SelectionChanged"></ListBox>
        </GroupBox>
    </Grid>
</UserControl>
