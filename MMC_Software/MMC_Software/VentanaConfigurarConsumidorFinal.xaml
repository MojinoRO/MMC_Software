<UserControl x:Class="MMC_Software.VentanaConfigurarConsumidorFinal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MMC_Software"
             mc:Ignorable="d" 
             d:DesignHeight="130" d:DesignWidth="400">
    <Border>
        <Grid Background="White" Margin="5">
            <Button x:Name="btnSalir" Content="X" FontWeight="Bold"  Click="btnSalir_Click"
                     Foreground="Red" FontFamily="Tahoma" Width="30" Height="30" HorizontalAlignment="Right"
                    VerticalAlignment="Top" Background="Transparent" BorderBrush="Transparent"></Button>
            <StackPanel>
                <StackPanel Margin="5">
                    <TextBlock Text="Nit Consumidor Final:" HorizontalAlignment="Center"
                               FontFamily="Tahoma" Foreground="Black"
                               FontWeight="Bold"></TextBlock>
                    <StackPanel Margin="5">
                        <TextBox x:Name="txtNitConsumidor" HorizontalAlignment="Center"
                             Width="100" Margin="5" KeyDown="txtNitConsumidor_KeyDown"></TextBox>
                        <TextBox x:Name="txtNombreConsumidor" HorizontalAlignment="Center"
                                 Width="300" Margin="5" HorizontalContentAlignment="Center"></TextBox>
                        <Button x:Name="btnGuardar" Width="100" Height="20" Content="Guardar"
                                Background="White" Click="btnGuardar_Click" ></Button>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
