<Window x:Class="MMC_v1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MMC_v1"
        mc:Ignorable="d"
        Title="Inicio de Sesión"
        Height="500" Width="800"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="#f2f4f8">

    <Window.Resources>
        <DropShadowEffect x:Key="DropShadowEffect"
                          BlurRadius="15"
                          ShadowDepth="4"
                          Opacity="0.3"
                          Color="Black"/>
    </Window.Resources>

    <Grid>
        <Border CornerRadius="15" Background="White" Margin="40" Padding="20" Effect="{StaticResource DropShadowEffect}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <!-- Panel Izquierdo: Logo -->
                <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Border Width="120" Height="120" CornerRadius="60" Background="#e6e6e6" Margin="0,0,0,10">
                        <Image Source="/Background/MMC.png" Stretch="Uniform"/>
                    </Border>
                    <TextBlock Text="MMC SOFTWARE" FontWeight="Bold" FontSize="16" Foreground="#2f4f6f" HorizontalAlignment="Center"/>
                    <TextBlock Text="Sistema Empresarial" FontSize="12" Foreground="#7a8ca3" HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Panel Derecho: Login -->
                <StackPanel Grid.Column="1" Margin="40,0" VerticalAlignment="Center">

                    <TextBlock Text="Iniciar Sesión" FontSize="24" FontWeight="Bold" Foreground="#2f4f6f" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                    <!-- Usuario ComboBox visual -->
                    <TextBlock Text="Usuario" FontSize="13" Foreground="Gray" Margin="0,0,0,5"/>

                    <Border Background="#f2f2f2" 
                            BorderBrush="#d0d0d0" 
                            BorderThickness="1" 
                            CornerRadius="3" 
                            Height="40" 
                            Margin="0,0,0,15">
                        <Grid>
                            <TextBox x:Name="txtNombreSeleccionado"
                                     IsReadOnly="False"
                                     TextAlignment="Center"
                                     FontSize="16"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     VerticalContentAlignment="Center"
                                     MouseDown="ToggleListaUsuarios"
                                     CharacterCasing="Upper"/>

                            <!-- Flechita ▼ -->
                            <Button Content="▼"
                                    Width="25"
                                    Height="25"
                                    FontSize="12"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Foreground="Gray"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Margin="0,0,5,0"
                                    Click="ToggleListaUsuarios"/>
                        </Grid>
                    </Border>

                    <!-- Lista desplegable oculta -->
                    <ListBox x:Name="ListadoUsuario"
                             Visibility="Collapsed"
                             Background="White"
                             BorderBrush="#ccc"
                             BorderThickness="1"
                             HorizontalContentAlignment="Center"
                             FontSize="12"
                             Margin="0,0,0,15"
                             Height="100"
                             SelectionChanged="ListadoUsuarios_SelectionChanged"/>

                    <!-- Contraseña -->
                    <TextBlock Text="Contraseña" FontSize="13" Foreground="Gray" Margin="0,0,0,5"/>
                    <PasswordBox x:Name="txtPassword"
                                 Height="40"
                                 FontSize="14"
                                 Background="#f2f2f2"
                                 BorderBrush="#d0d0d0"
                                 BorderThickness="1"
                                 Padding="5"
                                 Margin="0,0,0,25"
                                 HorizontalContentAlignment="Center"/>

                    <!-- Botones -->
                    <Button Content="Entrar"
                            Height="40"
                            Width="120"
                            Background="#4a90e2"
                            Foreground="White"
                            FontWeight="Bold"
                            FontSize="14"
                            BorderThickness="0"
                            Margin="0,0,0,10"
                            HorizontalAlignment="Center"
                            Cursor="Hand"
                            Click="Button_Click_Entrar"/>

                    <Button Content="Salir"
                            Height="30"
                            Width="100"
                            Background="Transparent"
                            Foreground="#888"
                            FontSize="12"
                            BorderBrush="#ccc"
                            BorderThickness="1"
                            HorizontalAlignment="Center"
                            Cursor="Hand"
                            Click="Button_Click_Salir"/>

                    <!-- Barra de Progreso -->
                    <ProgressBar x:Name="progressBarLogin"
                                 Height="10"
                                 Minimum="0"
                                 Maximum="100"
                                 Value="0"
                                 Visibility="Collapsed"
                                 Margin="0,10,0,0"/>

                    <!-- Empresa -->
                    <TextBox x:Name="TxtEmpresa"
                             Margin="0,30,0,0"
                             Height="30"
                             Background="Transparent"
                             BorderThickness="0"
                             FontSize="14"
                             IsReadOnly="True"
                             TextAlignment="Center"
                             Foreground="#999"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
