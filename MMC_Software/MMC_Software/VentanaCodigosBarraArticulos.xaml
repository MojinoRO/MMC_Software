<Window x:Class="MMC_Software.VentanaCodigosBarraArticulos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MMC_Software"
        mc:Ignorable="d"
        Title="Códigos de Barras - Artículos"
        Height="420"
        Width="680"
        Background="#2C3E50"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="False">

    <Border Margin="20" CornerRadius="12" BorderBrush="#3D566E" BorderThickness="2" Padding="15">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.4"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ENCABEZADO -->
            <GroupBox Header="Códigos de Barras"
                      Foreground="White"
                      FontWeight="Bold"
                      Margin="0 0 0 10"
                      FontSize="17"
                      BorderBrush="#1ABC9C"
                      Padding="5">
                <GroupBox.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.25"/>
                </GroupBox.Effect>
                <Grid Margin="10 5 10 5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Artículo:"
                               VerticalAlignment="Center"
                               FontSize="16"
                               Margin="0 0 10 0"/>
                    <TextBox x:Name="TxtNombreArticulo"
                             Grid.Column="1"
                             Background="#3D566E"
                             BorderBrush="#1ABC9C"
                             BorderThickness="1"
                             Foreground="White"
                             FontSize="16"
                             Padding="6"
                             IsReadOnly="True"/>
                </Grid>
            </GroupBox>

            <!-- DATAGRID -->
            <Border Grid.Row="1"
                    BorderBrush="#1ABC9C"
                    BorderThickness="1"
                    CornerRadius="6"
                    Margin="0 5"
                    Padding="4">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                </Border.Effect>
                <DataGrid x:Name="dgBarras"
                          AutoGenerateColumns="False"
                          CanUserAddRows="True"
                          CanUserDeleteRows="True"
                          SelectionUnit="Cell"
                          GridLinesVisibility="All"
                          HeadersVisibility="Column"
                          Background="#2C3E50"
                          Foreground="White"
                          BorderThickness="0"
                          RowHeight="35"
                          FontSize="15"
                          RowEditEnding="dgBarras_RowEditEnding"
                          PreviewKeyDown="dgBarras_PreviewKeyDown"
                          HorizontalGridLinesBrush="#1ABC9C"
                          VerticalGridLinesBrush="#1ABC9C"
                          AlternatingRowBackground="#34495E"
                          SelectionMode="Extended"
                          CellEditEnding="dgBarras_CellEditEnding">

                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#5DADE2"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Height" Value="35"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="BorderBrush" Value="#5DADE2"/>
                        </Style>
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#5DADE2"/>
                        <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="#34495E"/>
                        <SolidColorBrush x:Key="{x:Static SystemColors.WindowBrushKey}" Color="#2C3E50"/>
                    </DataGrid.Resources>

                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="4,2"/>
                            <Setter Property="FontSize" Value="15"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#148F77"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                                <Trigger Property="IsEditing" Value="True">
                                    <Setter Property="Background" Value="#3D566E"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Codigo"
                                            Binding="{Binding CodigoBarras, UpdateSourceTrigger=PropertyChanged}"
                                            Width="150">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="Padding" Value="4,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                            <DataGridTextColumn.EditingElementStyle>
                                <Style TargetType="TextBox">
                                    <Setter Property="Background" Value="#3D566E"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="BorderBrush" Value="#1ABC9C"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="Padding" Value="4,2"/>
                                    <Setter Property="SelectionBrush" Value="#1ABC9C"/>
                                    <EventSetter Event="PreviewTextInput" Handler="SoloNumeros_PreviewTextInput"/>
                                </Style>
                            </DataGridTextColumn.EditingElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Nombre"
                                            Binding="{Binding NombreBarras, UpdateSourceTrigger=PropertyChanged}"
                                            Width="*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="Padding" Value="4,0"/>
                                    <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                            <DataGridTextColumn.EditingElementStyle>
                                <Style TargetType="TextBox">
                                    <Setter Property="Background" Value="#3D566E"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="BorderBrush" Value="#1ABC9C"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="Padding" Value="4,2"/>
                                    <Setter Property="SelectionBrush" Value="#1ABC9C"/>
                                </Style>
                            </DataGridTextColumn.EditingElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Cantidad"
                                            Binding="{Binding Cantidad, UpdateSourceTrigger=PropertyChanged}"
                                            Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="Padding" Value="4,0"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                            <DataGridTextColumn.EditingElementStyle>
                                <Style TargetType="TextBox">
                                    <Setter Property="Background" Value="#3D566E"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="BorderBrush" Value="#1ABC9C"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="Padding" Value="4,2"/>
                                    <Setter Property="SelectionBrush" Value="#1ABC9C"/>
                                    <EventSetter Event="PreviewTextInput" Handler="SoloNumeros_PreviewTextInput"/>
                                </Style>
                            </DataGridTextColumn.EditingElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- BOTONES -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 15 0 0">
                <Button x:Name="BtnGuardar"
                        Content="💾 Guardar"
                        Width="140"
                        Height="42"
                        Background="#5DADE2"
                        Foreground="White"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Click="BtnGuardar_Click"
                        Margin="10">
                    <Button.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
                    </Button.Effect>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="6"
                                                Padding="10 5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#17A589"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="BtnCancelar"
                        Content="✖ Cancelar"
                        Width="140"
                        Height="42"
                        Background="Transparent"
                        Foreground="White"
                        BorderBrush="White"
                        BorderThickness="1"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Click="BtnCancelar_Click">
                    <Button.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
                    </Button.Effect>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="6"
                                                Padding="10 5"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E74C3C"/>
                                    <Setter Property="BorderBrush" Value="#E74C3C"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
