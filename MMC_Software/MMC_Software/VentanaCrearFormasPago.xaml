<UserControl x:Class="MMC_Software.VentanaCrearFormasPago"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:MMC_Software"
        mc:Ignorable="d" d:DesignWidth="800" Height="650">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- 🧾 Formulario -->
        <Border Grid.Column="0" CornerRadius="12" Background="White" Padding="20" BorderBrush="#D0D6DC" BorderThickness="1" Margin="0 0 10 0">
            <StackPanel Orientation="Vertical">

                <!-- Encabezado -->
                <StackPanel Orientation="Horizontal" Margin="0 0 0 15">
                    <Image Source="/Background/MMC.png" Width="26" Height="26" Margin="0 0 10 0"/>
                    <TextBlock Text="Registrar Forma de Pago" FontSize="16" FontWeight="Bold" Foreground="#2A3F54"/>
                </StackPanel>

                <!-- Código -->
                <StackPanel Margin="0 0 0 6">
                    <TextBlock Text="Código de la forma de pago" Foreground="#2A3F54" Margin="0 0 4 2"/>
                    <TextBox x:Name="txtCodigoFormaPago" Height="28"
                          Background="White" Foreground="#2A3F54"
                          BorderBrush="#C0C0C0" BorderThickness="1" Padding="4" IsEnabled="False"/>
                </StackPanel>

                <!-- Nombre -->
                <StackPanel Margin="0 0 0 6">
                    <TextBlock Text="Nombre de la forma de pago" Foreground="#2A3F54" Margin="0 0 4 2"/>
                    <TextBox x:Name="txtNombreFormaPago" Height="28"
                          Background="White" Foreground="#2A3F54"
                          BorderBrush="#C0C0C0" BorderThickness="1" Padding="4"/>
                </StackPanel>

                <!-- Tipo -->
                <StackPanel Margin="0 0 0 6">
                    <TextBlock Text="Tipo de Forma de Pago" Foreground="#2A3F54" Margin="0 0 4 2"/>
                    <ComboBox x:Name="cmbTipo" Height="28"
                           Background="White" Foreground="#2A3F54"
                           BorderBrush="#C0C0C0" BorderThickness="1" Padding="4" IsEnabled="False"/>
                </StackPanel>

                <!-- Cuenta PUC -->
                <Grid Margin="0 0 0 6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="40" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Cuenta PUC (código)" Foreground="#2A3F54" Margin="0 0 4 2"/>
                        <CheckBox x:Name="chkCuentaXPagar" Content="¿Cuenta por pagar?" Margin="0 0 0 4"
                               Foreground="#2A3F54" FontWeight="SemiBold"/>
                        <CheckBox x:Name="chkPideCambio" Content="¿Pide Cambio?" Margin="0 0 0 4"
                              Foreground="#2A3F54" FontWeight="SemiBold"/>
                        <TextBox x:Name="txtCuentaPuc" Height="28" IsReadOnly="True"
                              Background="White" Foreground="#2A3F54"
                              BorderBrush="#C0C0C0" BorderThickness="1" Padding="4" KeyDown="txtCuentaPucF1_KeyDown" IsEnabled="False"/>

                        <!-- Naturaleza D/C como TextBox -->
                        <TextBlock Text="Naturaleza (D/C)" Foreground="#2A3F54" Margin="0 8 4 2"/>
                        <TextBox x:Name="txtNaturaleza" Height="28" Width="30" HorizontalAlignment="Left"
                              Background="White" Foreground="#2A3F54"
                              BorderBrush="#C0C0C0" BorderThickness="1" Padding="4" IsEnabled="False"/>
                    </StackPanel>

                    <Button Grid.Column="1" Content="🔍" Margin="5,36,0,55" Height="28"
                         Background="#2A3F54" Foreground="White" FontWeight="Bold"
                         BorderBrush="{x:Null}" Click="Button_Click"/>
                </Grid>

                <!-- Nombre Cuenta -->
                <StackPanel Margin="0 0 0 6">
                    <TextBlock Text="Nombre cuenta PUC" Foreground="#2A3F54" Margin="0 0 4 2"/>
                    <TextBox x:Name="txtNombreCuenta" Height="28" IsReadOnly="True"
                          Background="White" Foreground="#2A3F54"
                          BorderBrush="#C0C0C0" BorderThickness="1" Padding="4" IsEnabled="False"/>
                </StackPanel>

                <!-- Medio de Pago -->
                <StackPanel Margin="0 0 0 10">
                    <TextBlock Text="Medio de pago" Foreground="#2A3F54" Margin="0 0 4 2"/>
                    <ComboBox x:Name="cmbMedioPago" Height="28"
                           Background="White" Foreground="#2A3F54"
                           BorderBrush="#C0C0C0" BorderThickness="1" Padding="4" IsEnabled="False"/>
                </StackPanel>

                <!-- Botones -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">
                    <Button x:Name="btnCrear" Content="➕" Width="32" Height="32" Margin="5"
                         Background="#2A3F54" Foreground="White" FontWeight="Bold" Click="btnCrear_Click" />
                    <Button x:Name="btnEditar" Content="✏️" Width="32" Height="32" Margin="5"
                         Background="#2A3F54" Foreground="White" FontWeight="Bold" Click="btnEditar_Click" />
                    <Button x:Name="btnEliminar" Content="❌" Width="32" Height="32" Margin="5" Click="btnEliminar_Click"
                         Background="#2A3F54" Foreground="White" FontWeight="Bold"/>
                    <Button x:Name="btnGuardar" Content="💾" Width="32" Height="32" Margin="5"
                         Background="#2A3F54" Foreground="White" FontWeight="Bold" Click="btnGuardar_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- 📋 Lista de formas de pago (ListBox simple) -->
        <Border Grid.Column="1" CornerRadius="12" Background="White" Padding="15" BorderBrush="#D0D6DC" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Formas de Pago Registradas" FontSize="16" FontWeight="Bold" Foreground="#2A3F54" Margin="0 0 0 10"/>

                <ListBox x:Name="lstFormasPago" FontSize="14"
                      Background="White" BorderBrush="#D0D6DC" BorderThickness="1"
                      Foreground="#2A3F54" 
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      Height="450" MouseDoubleClick="lstFormasPago_MouseDoubleClick"/>
                <Button x:Name="BtnSalir" Background="#2A3F54" Content="Salir" Height="30" 
                        Foreground="White" FontSize="20" Click="BtnSalir_Click"></Button>
            </StackPanel>
        </Border>
    </Grid>

</UserControl>
